@{
    Layout = "/Areas/MBShop/Themes/Y1/Views/Shared/_NoFootLayout.cshtml";
}
 @model List<YSWL.MALL.Model.Shop.Products.ProductInfo>
    @section head{
                <script src="/Scripts/jquery/maticsoft.waterfall.js"></script>
                <script src="/Scripts/jquery/maticsoft.img.js"></script>
                <script type="text/javascript">
                    $(function () {
                        $('body').addClass('bg');
                        waterFall.init({
                            //Ajax请求参数
                            AjaxOptions: {
                                //Ajax请求参数
                                Params: { viewName: "_WaterfallOrderedProdData",@Html.Raw(ViewBag.DataParams) },
                                //Ajax请求URL
                                DataURL: "@(ViewBag.BasePath)Order/WaterfallOrderedProdData"
                            },
                            //瀑布流起始索引记录器 - 用于累计
                            CurrentAjaxStartIndexHF: $('#hfCurrentPageAjaxStartIndex'),
                            //瀑布流起始索引
                            StartIndex: $('#hfCurrentPageAjaxStartIndex').val() ? parseInt($('#hfCurrentPageAjaxStartIndex').val()) : 0,
                            //瀑布流结束索引
                            EndIndex: $('#hfCurrentPageAjaxEndIndex').val() ? parseInt($('#hfCurrentPageAjaxEndIndex').val()) : 0,

                            //分页容器
                            PagedContainer: $('.in_pages'),
                            //列容器ID前缀
                            ColumnFirstId: "J_lazyload",
                            //列数
                            ColumnNumber: 0, RowNumber: 3
                        });
                    });
                </script>
    }             
    <!--START HEADER-->
    <header class="m_header">
        <div class="navbar-fixed-top">
            <div class="m_header_bar">
                <div class="m_icon_goback icon" onclick="history.go(-1);">
                    <span></span>
                </div>
                <p class="m_header_title">最近订购</p>
                <a href="@(ViewBag.BasePath)sc/ci">
                    <div class="m_icon_shopcart icon">
                        <span></span>
                    </div>
                </a>
            </div>
        </div>
    </header>
    <!-- END HEADER -->
         
    <div class="mt44 " id="J_lazyload" style="margin-bottom:10px;">
            @if (Model != null && Model.Count > 0)
            {
                foreach (YSWL.MALL.Model.Shop.Products.ProductInfo item in Model)
                {
                    <div class="list_box2 ">
                        <div class="">
                            <div class="list_thumb">
                                <a href="@(ViewBag.BasePath)p/d/@item.ProductId" class="">
                                    <img class="" src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T115X115_")">
                                </a>
                                @switch ((int)item.ruleType)
                    {
                        case 0:
                                        <div class="prod_tip bg_red">
                                            打折
                                        </div>
                                        break;
                                    case 1:
                                        <div class="prod_tip bg_blue">
                                            减价
                                        </div>
                                        break;
                                    case 2:
                                        <div class="prod_tip bg_green">
                                            直降
                                        </div>
                                        break;
                                    default:
                                        break;
                                }
                            </div>

                            <div class="list_descriptions">
                                <div class="product_name">@item.ProductName</div>
                                <span class="price_red">￥ @item.LowestSalePrice.ToString("F")元</span>
                            </div>
                            
                        </div>
                        @{
                            if (item.SalesType == 1 && item.SaleStatus == 1 && ViewBag.IsMultiDepot)
                            {
                                <div class="cart icon">
                                    <a href="javascript:;" onclick="dialogShow(@item.ProductId, @item.SupplierId, '@item.ThumbnailUrl1',@item.SupplierId,@item.ProductId)"><span></span></a>
                                </div>
                            }
                            else
                            {
                                <div class="cart icon">
                                    <a href="javascript:;" onclick="dialogShow(@item.ProductId,@item.SupplierId,'@item.ThumbnailUrl1')"><span></span></a>
                                </div>
                            }
                        }
                            
                       
                    </div>
                }
            }
            <input type="hidden" id="hfCurrentPageAjaxStartIndex" value="@ViewBag.CurrentPageAjaxStartIndex" />
            <input type="hidden" id="hfCurrentPageAjaxEndIndex" value="@ViewBag.CurrentPageAjaxEndIndex" />
        <input type="hidden" id="hfCurrentPageAjaxSize" value="@ViewBag.CurrentPageAjaxSize"/>
        <input type="hidden" id="hdIsMultiDepot" value ="@ViewBag.IsMultiDepot" />
    </div>
                <!--加入购物车弹窗-->
                @Html.Partial("/Areas/MBShop/Themes/Y1/Views/Partial/_AddCart.cshtml")

    @section foot{
        <script src="/Scripts/jqueryui/jquery-ui-1.9.2.custom.js" type="text/javascript"></script>
        <script src="/Areas/MBShop/Themes/Y1/Content/Scripts/productdetail.js?v=1.0"></script>
    }
