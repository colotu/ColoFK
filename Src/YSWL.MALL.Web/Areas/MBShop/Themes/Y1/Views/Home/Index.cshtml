@using YSWL.MALL.Model.Shop.Products
@{
    Layout = "/Areas/MBShop/Themes/Y1/Views/Shared/_BaseLayout.cshtml";  
}
 @Html.Action("Header", "Partial")

<script src="/Scripts/jquery/maticsoft.waterfall.js"></script>
<script src="/Scripts/jquery/maticsoft.img.js"></script>
<div class="index_wrap container mt44">
    <div class="row">
       @Html.Action("AdDetail", "Partial", new { id =49, ViewName = "_IndexAd" })
        <!--按钮-->
        <div class="quick_nav_wrap">

            <nav class="quick_entry_nav">
                <a href="@(ViewBag.BasePath)p/s" class="quick_entry_link">
                    <img src="/Areas/MBShop/Themes/Y1/Content/images/quick_entry_icon1.png" />
                    <span>促销商品</span>
                </a>
                <a href="@(ViewBag.BasePath)u/MyFavor" class="quick_entry_link">
                    <img src="/Areas/MBShop/Themes/Y1/Content/images/quick_entry_icon2.png" />
                    <span>收藏商品</span>
                </a>
                <a href="@(ViewBag.BasePath)o/op" class="quick_entry_link">
                    <img src="/Areas/MBShop/Themes/Y1/Content/images/quick_entry_icon3.png" />
                    <span>最近订购</span>
                </a>
                <a href="@(ViewBag.BasePath)o/ba" class="quick_entry_link">
                    <img src="/Areas/MBShop/Themes/Y1/Content/images/quick_entry_icon4.png" />
                    <span>再次购买</span>
                </a>
            </nav>
        </div>

        <!--全部商品-->
        <div class="home_main mb50">
            <div class="prod_title icon">
                <h1>全部商品</h1>
                <span class="searchlist" onclick="changelist();"></span>
                <span class="searchlist2" onclick="changeview();" style="display:none"></span>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="list_box row" id="J_lazyload">
                            @Html.Action("Index", "Product", new { Cid = 0, viewName = "_IndexList"  })
                            <div ajaxcontent="1" class="search-cont-bar" name="__CXSS0011">
                                <div class="search-cont-in">
                                    <div class="text-shadow-l">
                                        <div class="text-shadow-r">
                                            <div class="text-bor-l">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--加入购物车弹窗-->
        @Html.Partial("/Areas/MBShop/Themes/Y1/Views/Partial/_AddCart.cshtml")

        <!--底部悬浮导航-->
        <input type="hidden" value="s_home" id="hidPage"/>
        <input type="hidden" id="hdIsMultiDepot" value ="@ViewBag.IsMultiDepot" />
    </div>
</div>
@section foot{
    <script src="/Scripts/jqueryui/jquery-ui-1.9.2.custom.js" type="text/javascript"></script>
    <script src="/Areas/MBShop/Themes/Y1/Content/Scripts/productdetail.js?v=1.0"></script>
