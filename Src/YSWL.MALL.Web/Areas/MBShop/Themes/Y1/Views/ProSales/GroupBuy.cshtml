@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Shop.PromoteSales.GroupBuy>
@{
    Layout = "/Areas/MBShop/Themes/Y1/Views/Shared/_BaseLayout.cshtml";
    string cid = Request.RequestContext.RouteData.Values["cid"] != null ? Request.RequestContext.RouteData.Values["cid"].ToString() : "0";
    string regionId = Request.RequestContext.RouteData.Values["regionid"] != null ? Request.RequestContext.RouteData.Values["regionid"].ToString() : "0";
    string mod = Request.RequestContext.RouteData.Values["mod"] != null ? Request.RequestContext.RouteData.Values["mod"].ToString() : "default";
    ViewBag.Title = "团购列表";
}
<script type="text/javascript" src="@Url.Content("/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
<script src="/Scripts/jquery/maticsoft.img.min.js" type="text/javascript"></script>
<script src="/Areas/MBShop/Themes/Y1/Content/Scripts/timeCountDown.js" type="text/javascript"></script>
<div class="top">
    <span><a href="javascript:;" onclick="history.go(-1)">&lt;返回</a></span>
    @Html.Partial("/Areas/MBShop/Themes/Y1/Views/Partial/_HeadRight.cshtml")
   <span style="padding-left: 32px"></span>
</div>
<table width="100%" height="55" border="0" cellspacing="0" cellpadding="0" class="pro_list_lm">
    <tr>
        <td class="modList" mod="hot">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy?regionId=@regionId&cid=@(cid)&mod=hot">销量</a>
        </td>
        <td class="modList" mod="price">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy?regionId=@regionId&cid=@(cid)&mod=price">价格</a>
        </td>
        <td class="modList" mod="new">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy?regionId=@regionId&cid=@(cid)&mod=new">新品</a>
        </td>
    </tr>
</table>

<!--地区-->
<div class="f-input" style="margin:10px 0px 20px 10px;">
    <script src="/Scripts/jquery/jquery.guid.js" type="text/javascript"></script>
    <input type="hidden" id="hfSelectedNode"  value="@ViewBag.regionId"/>
    <script src="/Scripts/jquery/maticsoft.selectregion.js" handle="/RegionHandle.aspx" isnull="true" type="text/javascript"></script>
</div>
<div>
    <div style="margin:10px auto 10px;width:140px;">
    <a href="javascript:;" class="regionOK" style="background-color:#f9413a;padding:10px 50px;border-radius:5px;color:#fff";margin:0 auto;>确定</a>
    </div>
</div>
<!--/地区-->

@{Html.RenderPartial("_GroupBuyList", Model);}



