@{
    Layout = "/Areas/MBShop/Themes/Y1/Views/Shared/_BaseLayout.cshtml";
}
<!--START HEADER-->
<header class="m_header">
    <div class="navbar-fixed-top">
        <div class="m_header_bar">
            <p class="m_header_title">充值失败</p>
        </div>
    </div>
</header>
<!-- END HEADER -->
<div class="mt44 mb50">
    <div class="wrap" style="display:block">
        <div class="order_fail_pic"></div>
        <div class="prompt_text">
            您的充值存在风险，请查看充值状态或稍后重试。
        </div>
        <div class="prompt_text">
            充值号：@(ViewBag.RechargeId)
        </div>
        </div>
</div>
 
<input type="hidden" value="@ViewBag.RechargeId" id="RechargeId"/>
<input type="hidden" value="@ViewBag.PayStatus" id="Status"/>
<script type="text/javascript">
    (function () {
        var id = $('#RechargeId').val();
        var url;
        if (id) {
            url = '/pay/account' + id;
        } else {
            url = $YSWL.BasePath + 'UserCenter/Balance';
        }
        $('.btn-conti').unbind('click').bind('click', function () {
            window.location.replace(url);
        });
    })();
</script>
