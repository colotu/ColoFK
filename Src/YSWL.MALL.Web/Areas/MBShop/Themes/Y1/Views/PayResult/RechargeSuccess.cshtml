@{
    Layout = "/Areas/MBShop/Themes/Y1/Views/Shared/_BaseLayout.cshtml";
}
<!--START HEADER-->
<header class="m_header">
    <div class="navbar-fixed-top">
        <div class="m_header_bar">
            <p class="m_header_title">充值成功</p>
        </div>
    </div>
</header>
<!-- END HEADER -->
<!-- END HEADER -->
<div class="mt44 mb50">
    <div class="wrap" style="display:block">
        <div class="order_complete_pic"></div>
        <div class="prompt_text">
            您已成功支付，请注意查看您的账户余额。
        </div>
        <div class="empty_warning_text">
            充值号：@(ViewBag.RechargeId)<br/>
            充值金额：@(ViewBag.RechargeBlance.ToString("F"))
        </div>
        <div class="empty_warning_text">
            <a href="@(ViewBag.BasePath)UserCenter/Balance">查看您的余额</a>
        </div>
        
    </div>
</div>
<input type="hidden" value="@ViewBag.RechargeId" id="RechargeId" />

 