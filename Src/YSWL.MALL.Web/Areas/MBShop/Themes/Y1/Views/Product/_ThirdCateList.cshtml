@model List<YSWL.MALL.Model.Shop.Products.CategoryInfo>

    @if (Model != null && Model.Count > 0)
    {
        <table>

            @for (int i = 0; i < Model.Count; i++) 
            {

                if (i % 3 == 0)
                {
                    @: <tr>
                        }
                <td>
                    <a href="@(Model[i].HasChildren ? (ViewBag.BasePath) + "p/c/" + Model[i].CategoryId : (ViewBag.BasePath) + "p/" + Model[i].CategoryId)">
                        <img class="category_content_img" src="@Model[i].ImageUrl" style="width:80px;height:80px" alt="">
                        <span>@YSWL.Common.StringPlus.SubString(Model[i].Name, 12, "...")</span>
                    </a>
                </td>
                if (i % 3 == 2 || i == Model.Count - 1)
                {
                    @:</tr>
                        }


}
</table>
    }
