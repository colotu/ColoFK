@using System.Web.Mvc.Html
@{
    Layout = "~/Areas/BShop/Themes/PB02/Views/Shared/_SiteLayout.cshtml";
@*网站前台模版*@
}
@section head{
    @RenderSection("head", false)
}
@Html.Action("Header", "Partial", new { area = "BShop" })
<!-- 头部 -->
<header >
    <div class="wrap">
        <div class="headerLayout clearfix">
            <!-- logo -->
            <div class="headerLogo">
                <h1  class="headerLogo-bg">
                    @Html.Action("Header", "Partial", new { area = "BShop", ViewName = "_HeaderLogo" })
                </h1>
            </div>
            <!-- 搜索框 -->
            <div class="mallSearch clearfix">
                @Html.Partial("/Areas/BShop/Themes/PB02/Views/Partial/_Search.cshtml")
                @Html.Action("HotKeyword", "Partial", new { Cid = 0, Top = 12,area="BShop" })
            </div>
            <!-- 购物车 -->
            @Html.Partial("/Areas/BShop/Themes/PB02/Views/Partial/_HeaderCart.cshtml")
        </div>
    </div>
</header>
