@model List<YSWL.MALL.Model.Shop.Products.ProductInfo> 
<ul class="pro-list clearfix">
@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
    <li class="pro-list-item">
        <a href="@item.SeoUrl">
            <div class="pro-item">
                <div class="pro-pic">
                    <img alt="@item.ProductName" src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T350X350_")">
                </div>
                <div class="pro-info">
                    <div class="pro-price">
                        <span class="price-new"><i>¥</i>@item.LowestSalePrice.ToString("F")</span>
                    </div>
                    <p class="pro-name">@item.ProductName</p>
                    <div class="disappearance">
                        <div class="pro-price">
                            <span class="price-new"><i>¥</i>@item.LowestSalePrice.ToString("F")</span>
                        </div>
                        <!-- 店铺信息 --> 
                       @Html.Action("SuppInfo", "Partial", new { suppId = item.SupplierId, viewName = "/Areas/BShop/Themes/PB02/Views/Home/_ShopInfo.cshtml" })
                    </div>
                </div>
            </div>
        </a>
    </li>
    }
}
</ul>
