                    @Html.Action("AdDetail", "Partial", new { id = 137, ViewName = "/Areas/BShop/Themes/PB02/Views/Home/_IndexAd.cshtml" })
                </div>
            </div>
            <div class="grid-c2">
                <div class="real-time-data">
                    <div class="data-box" id="box1">
                       @*<div class="title">
                          市场行情指数日报（元）
                          <a href="javascript:;" class="more">更多<em class="character">&gt;&gt;</em></a>
                      </div>*@
                        <div class="data-content" style="height: 155px;">
                            @Html.Action("AdDetail", "Partial", new { id = 143, ViewName = "/Areas/BShop/Themes/PB02/Views/Home/_UpperRightCornerAd.cshtml" })
