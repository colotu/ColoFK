@{
    Layout = "/Areas/BShop/Themes/PB02/Views/Shared/_ArticleLayout.cshtml";
}
@using Webdiyer.WebControls.Mvc
@model  PagedList<YSWL.MALL.Model.CMS.Content>
@section title{
    <b class="word" id="h-page-title"></b>
}
@section search{
    <!-- 搜索框 -->
    <div class="cartSearch clearfix">
        @Html.Partial("/Areas/BShop/Themes/PB02/Views/Partial/_Search2.cshtml")
    </div>
}
<input type="hidden" id="hidCid" value="" />
<div class="wrap">
    <div class="news-list clearfix">
        <div class="left-box">
            <!-- start tab切换 -->
            <div class="tab-nav" id="tab_a">
                <!-- start 表单切换按钮 -->
                @Html.Action("LeftMenu", "Article", new { classid = ViewBag.PCid, viewName = "_ClassList" })
                <!-- end 表单切换按钮 -->
                <div id="articleList">
                    @{Html.RenderPartial("_List", Model);}
                </div>           
            </div>
            <!-- end tab切换 -->
        </div>
        <div class="right-box">
            <div class="ad-wrap">
              @Html.Action("AdDetail", "Partial", new { id = 141, ViewName = "/Areas/BShop/Themes/PB02/Views/Article/_AdList.cshtml" })
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#classList a[cid=' + $.getUrlParam('cid') + ']').addClass('tab-active');
    $('#hidCid').val($.getUrlParam('cid'));
</script>
<script src="/scripts/MvcPager-1.8.js" type="text/javascript"></script>