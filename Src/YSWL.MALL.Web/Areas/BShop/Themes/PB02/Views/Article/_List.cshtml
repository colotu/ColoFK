@using Webdiyer.WebControls.Mvc
@model  PagedList<YSWL.MALL.Model.CMS.Content>          
<!-- start tab切换主体 -->
<ul class="tab-content">
    <li class="tab-box">
@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="news-item">
            <h2 class="title"><a href="@(ViewBag.BasePath)Article/Details/@item.ContentID?vName=ArtiDetail" target="_blank">@item.Title</a></h2>
            <div class="article-source">
                <span class="author">来自：<span class="text">@item.BeFrom</span></span>
                <span class="date">时间：@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</span>
            </div>
            <p class="content clearfix">
                @if (!String.IsNullOrWhiteSpace(item.ImageUrl))
                {
                    <span class="n-img">
                        <img src="@item.ImageUrl" />
                    </span>
                }
            @Html.Raw(YSWL.Common.Globals.HtmlDecode(YSWL.MALL.BLL.Settings.SEORelationManage.FilterStr(item.Summary, true, true, false, false, false, item.ContentID, "CMSSummary")))<a class="a-link" href="@(ViewBag.BasePath)Article/Details/@item.ContentID?vName=ArtiDetail">查看全文</a></p>
            <div class="subinfo-box clearfix">
                <div class="box-l">
                    <span class="item">阅读数：@item.PvCount</span>
                    <span class="item">赞数：@item.TotalSupport</span>
                    <span class="item">栏目：@item.ClassName</span>
                </div>
            </div>
        </div>
    }
}
else
{
    <div  style="text-align:center;padding-top: 20px;">
        暂无数据
    </div>
}
</li>
</ul>
@if (Model != null)
{
     <!-- 分页 -->
    <div class="pagination">
        @Ajax.Pager(Model, new PagerOptions
{
    ShowDisabledPagerItems = false,
    AlwaysShowFirstLastPageNumber = true,
    ShowFirstLast = false,
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 6,
    CurrentPagerItemTemplate = "<span class=\"page-item curr\">{0}</span>",
    PagerItemTemplate = "<span class=\"page-item\">{0}</span>",
    MorePagerItemTemplate = "<span class=\"pn-break\">{0}</span>",
    CssClass = "p-wrap",
    PrevPageText = "<span class=\"pn-prev \"><i>&lt;</i>上一页</span>",
    NextPageText = "<span class=\"pn-next \">下一页<i>&gt;</i></span>",
}).AjaxOptions(a => a.SetUpdateTargetId("articleList"))
    </div>
}

<!-- end tab切换主体 -->