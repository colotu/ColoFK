@{
    Layout = "/Areas/BShop/Themes/PB02/Views/Shared/_BaseLayout.cshtml";
    string areaid = Request.RequestContext.RouteData.Values["areaid"] != null ? Request.RequestContext.RouteData.Values["areaid"].ToString() : "0";
    string mod = Request.RequestContext.RouteData.Values["mod"] != null ? Request.RequestContext.RouteData.Values["mod"].ToString() : "sales";
    string keyword = Request.RequestContext.RouteData.Values["keyword"] != null ? Request.RequestContext.RouteData.Values["keyword"].ToString() : "";
}
@using Webdiyer.WebControls.Mvc
@model  YSWL.MALL.ViewModel.Shop.SupplierModel
<div class="searchResult">
    <div class="wrap">
        <!-- 面包屑导航 -->
        <div class="breadcrumb">
            <a href="@(ViewBag.BasePath)search/storelist/0/@mod/@keyword" class="crumb-a-link">全部</a>
                        @if (Model.AreaPathList != null && Model.AreaPathList.Count > 0)
            {
                foreach (var item in Model.AreaPathList)
                {
                                <i class="arrow-r">&gt;&nbsp;</i><a href="@(ViewBag.BasePath)search/storelist/@item.AreaId/@mod/@keyword" class="crumb-a-link">@item.Name</a>
                }
            }
            <i class="arrow-r">&gt;&nbsp;</i><a href="javascript:;" class="crumbs-lk">“@keyword”</a>
        </div>
        <div class="searchResult-info">
            共找到 <span class="number">@ViewBag.TotalCount</span> 条店铺信息
        </div>
       
        <!--筛选-->
        @Html.Action("SuppAreasList", "Partial", new { AreaId = areaid, Top = 0, viewName = "/Areas/BShop/Themes/PB02/Views/Search/_SuppAreasList.cshtml" })

        <div class="list-main clearfix search-shop-list">
            <div class="m-list">
                <div class="ml-wrap" id="storeList">
                    @{Html.RenderPartial("_StoreList", Model);}
                </div>
            </div>
        </div>
        <div class="bottom-search">
            <div class="group-wrap">
                @Html.Action("HotKeyword", "Partial", new { Cid = 0, Top = 18, ViewName = "_HotKeyword3" })
                <div class="bs-line">
                    <div class="bs-line-key">
                        <b>重新搜索：</b>
                    </div>
                    <div class="bs-line-value">
                        <input type="text" class="input-txt input-l" placeholder="搜索" value="@keyword"  id="bottomKeyword">
                        <a href="javascript:;" class="btn-solid"  id="BtnSearch">搜索</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#search_key").val('@keyword');
    $('#selectSearchBox .selected').html('供应商<i class="icon-down-c"></i>').attr('item', 'shop');
    $('#search_key').attr('placeholder', '请输入您要找的供应商');
</script>

<script src="/scripts/MvcPager-1.8.js" type="text/javascript"></script>
