@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.CMS.Content>
<div id="ArticleList">
@if (Model != null)
{      
    <ul>
    @foreach (var item in Model)
    {
             <li><a href="@(ViewBag.BasePath)Article/ArticleDetail?id=@item.ContentID" title="@item.Title">@YSWL.Common.StringPlus.SubString(item.Title,30,"...") </a> <span>@item.CreatedUserName</span> <small><u>@item.TotalComment</u>/@item.PvCount</small>
                <em>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</em></li>
    }
    </ul>
}

<center>
    <!--jQuery Ajax Paging Start-->
    @if (Model != null)
    {
        Ajax.Pager(Model, new PagerOptions()
        {
            CssClass = "in_pages",
            PageIndexParameterName = "page",
            NumericPagerItemCount = 5,
            NumericPagerItemTemplate = "<p>{0}</p>",
            NavigationPagerItemTemplate = "<p>{0}</p>"
        }).AjaxOptions(x => x.SetUpdateTargetId("ArticleList"));
    }
    <!--jQuery Ajax Paging End-->
</center>
</div>
           

      