@model   List<YSWL.MALL.ViewModel.SNS.ProductCategory>
<div class="main_more_al">
    <p class="main_more_al_u">
        更多精彩<a href="javascript:;">宝贝</a></p>
    <div class="main_more_al_v">
    </div>
    <div class="clear">
    </div>
</div>
<div class="main_more_cl">
    @foreach (YSWL.MALL.ViewModel.SNS.ProductCategory item in Model)
    {
        <div class="main_more_cl_a" style="margin-right: 40px;">
            <h1>
                <a href="@(ViewBag.BasePath)Product/@(item.ParentModel.Name)/@(item.ParentModel.CategoryId)/@(item.ParentModel.CategoryId)/0-0-hot-all"  
                target="_blank">@item.ParentModel.Name</a></h1>
            <ul>
                @for (int i = 0; i < item.ChildList.Count - 1; i = i + 2)
                {
                    <li style="text-align: center;">
                        @Html.ActionLink(item.ChildList[i].Name, "Index", "Product", new { cname = item.ChildList[i].Name, topcid = item.ParentModel.CategoryId, 
                       cid = item.ChildList[i].CategoryId, minprice = 0, maxprice = 0, sequence = "new", color = "all" }, new { target = " _blank", @class = "pink" })
                        @Html.ActionLink(item.ChildList[i + 1].Name, "Index", "Product", new { cname = item.ChildList[i + 1].Name, topcid = item.ParentModel.CategoryId, 
                       cid = item.ChildList[i + 1].CategoryId, minprice = 0, maxprice = 0, sequence = "new", color = "all" }, new { target = " _blank", @class = "pink" })
                    </li>
                }
            </ul>
        </div>
    }
    <div class="clear">
    </div>
</div>
<div class="clear">
</div>
