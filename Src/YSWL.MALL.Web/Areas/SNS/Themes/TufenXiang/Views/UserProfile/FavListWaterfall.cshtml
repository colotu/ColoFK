@using YSWL.MALL.Model.SNS
@model YSWL.MALL.ViewModel.SNS.PhotoList
@{
    <script type="text/javascript">
        $(function () {
            $('.emerge').unbind('hover').hover(function () {
                $(this).find('#dodge').show();
                $(this).find('#delfav').show();
            }, function () {
                $(this).find('#dodge').hide();
                $(this).find('#delfav').hide();
            });
            resizeImg('.imagewalls', 211, 1280);
        });
    </script>
    foreach (PostContent item in Model.PhotoListWaterfall)
    {
    <div class="i_w_y">
                        <div id="emerge" class="emerge">
                            <p>
                                <a target=_blank href="@(ViewBag.BasePath)Detail/@(item.Type == 1 ? "Product" : "Photo")/@item.TargetId"  >
                                    <img ref="@(YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbImageUrl, "T211x1280_"))" alt="@item.TargetDescription" /></a></p>

                             @if (ViewBag.IsCurrentUser == true)
                             {
                            <div id="delfav">
                                <a href="javascript:;" class="delfav" targetid="@item.TargetId" imagetype="@(item.Type == 1 ? "Product" : "Photo")">
                                    <img src="/Areas/SNS/Themes/TufenXiang/Content/images/del-btn-19x19.png" /></a></div>
                             }
                            <div id="dodge">
                                <a href="javascript:;" class="addalbum" targetid="@item.TargetId" imagetype="@(item.Type == 1 ? "Product" : "Photo")" imageurl="@(YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbImageUrl, "T116x170_"))" >
                                    <img src="/Areas/SNS/Themes/TufenXiang/Content/images/user_21.png" /></a></div>
                        </div>
               <div class="search_com">
                            <div class="pinglun">
                                <p class="search_com_a1">
                                    <a href="javascript:;" class="favourite"  imagetype="Photo" targetid=@item.TargetId>
                                        <img src="/Areas/SNS/Themes/TufenXiang/Content/images/main10.jpg" />
                                        </a>
                                    <a href="javascript:;">@item.FavouriteCount</a>
                                    </p>
                                <p class="search_com_b" >
                                    <a href="javascript:;">
                                        <img src="/Areas/SNS/Themes/TufenXiang/Content/images/main11.jpg" /></a><a href="javascript:;"
                                                                                                                   class="commentcount">@item.CommentCount 评论</a>
                                                                                                                   </p>
                                <input class="TargetId" type="hidden" value="@item.TargetId" imagetype="Photo"/>
                                <div class="clear">
                                </div>
                            </div>
                            <div class="clear">
                            </div>
                        </div>
                           <div class="search_iss">
                        @{if (item.CommentCount > 0 && item.CommentList.Count > 0)
                          {
                              Html.RenderPartial("~/Areas/SNS/Themes/TufenXiang/Views/Partial/TargetListComment.cshtml", item.CommentList);

                          }}  <div class="clear">
                                </div>
                         </div>
                    </div>
    }
}
