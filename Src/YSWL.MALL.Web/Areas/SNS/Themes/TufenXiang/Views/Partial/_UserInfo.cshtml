@model YSWL.MALL.Model.Members.UsersExpModel
@if (ViewBag.IsPost == false)
{
    <div class="t_user">
        <div class="t_user_1">
            <div class="t_960">
                <div class="t_960_1">
                    <dl class="t1"><a href="@(ViewBag.BasePath)User/Posts/@(Model.UserID)"  target="_blank">
                                       <img  src="/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/@{@Model.UserID}.jpg" alt="@Model.NickName" width="124px;" height="124px;" />
                                   </a></dl>
                    <dl class="t2">
                        <dt>
                            <p class="t2_a">
                                <a style=" color:#2466b7" href="@(ViewBag.BasePath)User/Posts/@(Model.UserID)" target="_blank">@Model.NickName
                                    @if (ViewBag.Level != null)
                                    {    
                                        <span class="W_level_ico@(@ViewBag.Level)" title='当前等级：@ViewBag.Level' ><span node-type="level" title='当前等级：@ViewBag.Level'  >
                                                                                                                </span></span>
                                    }
                                    @if (Model.IsUserDPI)
                                    { 
                                        <img src='/Areas/SNS/Themes/TufenXiang/Content/images/geren.png' alt="实名用户" title="实名用户" />
                                    }
                                    @if (ViewBag.IsStar)
                                    { 
                                        <img src='/Areas/SNS/Themes/TufenXiang/Content/images/daren.png' alt="达人身份证" title="达人身份证" />
                                    }
                                </a>
                                <span style="margin-left:10px;">@Model.Address</span>
                            </p>
                            <p class="t2_b">@(string.IsNullOrEmpty(Model.Singature) ? "暂无签名" : "个性签名：" + Model.Singature)</p>
                        </dt>
                        <dd>
                              @if (ViewBag.IsCurrentUser == false)
                              {
                                  <script src="/Areas/SNS/Themes/TufenXiang/Content/Scripts/FellowUser.js" type="text/javascript"></script>
                                  <p id="Fellow">
                                      <a href="javascript:;" class="FellowUser"  UserId="@Model.UserID">
                                          <img src="/Areas/SNS/Themes/TufenXiang/Content/images/main35.jpg" /></a> 
                                      <a href="javascript:;" class="UnFellowUser"  style="display: none"  UserId="@Model.UserID" >
                                          <img src="/Areas/SNS/Themes/TufenXiang/Content/images/main39.jpg" /></a>
                                  </p>
                                  <p><a href="javascript:;" class="SendMsg" nickname="@Model.NickName"><img src="/Areas/SNS/Themes/TufenXiang/Content/images/main36.jpg"/></a>
                                  </p>
                                  <script src="/Areas/SNS/Themes/TufenXiang/Content/Scripts/SendSiteMsg.js" type="text/javascript"></script>
                              }
                              else
                              {
                                  <p>
                                       <a href="@(ViewBag.BasePath)UserCenter/Personal"   >
                             帐号设置</a> 
                                  </p>
                              }

                        </dd>
                    </dl>
                </div>
                <div class="t_960_2">
                    
                    <dl class="t3">
                        <a style="text-decoration:none" href=""></a>
                        <p style="border-right: none;"><a href="@(ViewBag.BasePath)User/Fav?uid=@Model.UserID">@Model.FavoritedCount<br/><span>喜欢</span></a></p>
                        <p><a href="@(ViewBag.BasePath)User/Fans?uid=@Model.UserID">@Model.FansCount<br/><span>粉丝</span></a></p>
                        <div class="clear"></div>
                    </dl>
                    <div class="fenxiang_style_24x24">
                        @Html.Action("BaiduShare", "Partial")
                    </div>
                </div> 
                <div class="clear"></div>
            </div>
            <div class="t_nav">
                <ul>
                    <li><a href="@(ViewBag.BasePath)User/Posts/@Model.UserID" >首页</a></li>
                    <li><a href="@(ViewBag.BasePath)User/Fav?uid=@Model.UserID">喜欢(@Model.FavouritesCount)</a></li>
                    <li><a href="@(ViewBag.BasePath)User/Albums?uid=@Model.UserID">专辑(@Model.AblumsCount)</a></li>
                    <li><a href="@(ViewBag.BasePath)User/Group?uid=@Model.UserID">小组</a></li>
                </ul>
            </div>
        </div>
    </div>
    <input type="hidden" id="FellowUserId" value="@Model.UserID"/>
}
else
{
    <div class="user_cont_top">
    </div>
}
<script type="text/javascript">
    $(function () {
        var action = '@(Request.RequestContext.RouteData.Values["Action"])';
        $(".t_nav>ul>li").each(function () {
            var href = $(this).find("a").attr("href");
            if (href.toLowerCase().indexOf(action.toLowerCase()) != -1) {
                $(this).find("a").wrapInner("<span></span>");
                $(this).find("a").addClass("t_nav_a");
            }
        });
    })

</script>
