@model  List<YSWL.MALL.Model.SNS.MsgTip>
@{YSWL.Accounts.Bus.User currentUser = (YSWL.Accounts.Bus.User)ViewBag.Current;}
  <link href="/Areas/SNS/Themes/TufenXiang/Content/Css/jquery.message.css" rel="stylesheet" type="text/css" />
 <script src="/Scripts/PointMsg/Scripts/jquery.message.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('#appear').unbind('hover').hover(function () {
            $('#cover').show();
        }, function () {
            $('#cover').hide();
        });
       if (@ViewBag.RankScore > 0 && @ViewBag.Pointer > 0) {
            $.MessageShow("&#12288;登录成功！积分<span style='color:yellow;font-weight: bolder;'>+"+@ViewBag.Pointer+"</span>，成长值<span style='color:yellow;font-weight: bolder;'>+"+@ViewBag.RankScore+"</span>&#12288;");
        }else if ( @ViewBag.Pointer > 0) {
               $.MessageShow("登录成功！积分，<span style='color:yellow;font-weight: bolder;'>+"+@ViewBag.Pointer+"</span>");
        }else if (@ViewBag.RankScore > 0) {
            $.MessageShow("&#12288;登录成功！成长值，<span style='color:yellow;font-weight: bolder;'>+"+@ViewBag.RankScore+"</span>&#12288;");
        }
    });

    //绑定
    $(function () {
        $(".layer_message_box").smartFloat();
        $(".W_close_color").click(function () {
            $(this).parents(".layer_message_box").hide();
        });
    });

</script>
@if(Model!=null&&Model.Count>0)
{
<div class="layer_message_box" style="display: none">
    <ul>
      @foreach(YSWL.MALL.Model.SNS.MsgTip item in Model)
      {
        if(item._MsgType==(int)YSWL.MALL.Model.SNS.EnumHelper.MsgType.System)
        {
          <li>@(item.Count)条系统消息，<a target="_top" action-type="bp-link" bpfilter="main" href="@(ViewBag.BasePath)UserCenter/SysInfo">查看消息</a></li>
        }
        else if(item._MsgType==(int)YSWL.MALL.Model.SNS.EnumHelper.MsgType.Private)
        {
          <li>@(item.Count)条最新私信，<a target="_top" action-type="bp-link" bpfilter="main" href="@(ViewBag.BasePath)UserCenter/Inbox">查看私信</a></li>
        }
        else if(item._MsgType==(int)YSWL.MALL.Model.SNS.EnumHelper.MsgType.Refer)
        {
          <li>@(item.Count)条新@提到我，<a target="_top" action-type="bp-link" bpfilter="main" href="@(ViewBag.BasePath)Profile/Posts?type=referme">查看@@我</a></li>
        }
      }
      </ul>
    <a class="W_close_color" href="javascript:void(0);" action-type="closeTip"></a>
</div>
}
<div class="headers">
<input type="hidden"  id="currentUserId" value=@{@currentUser.UserID} />
    <div class="header">
  <div class="header_blue">
      <div class="logo"><a href="@(ViewBag.BasePath)"><img src="/Areas/SNS/Themes/TufenXiang/Content/images/logo.jpg"/></a></div>
          <div id="appear">
        	  <p class="appear_z">
                    <a href="@(ViewBag.BasePath)Profile/Posts?type=fellow">
                        <img style=" width:30px; height:30px" src="/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/@(currentUser.UserID).jpg" alt="" id="userImage"></a></p>
                <p class="appear_y">
                    <a href="@(ViewBag.BasePath)Profile/Posts?type=fellow" id="usernick">@currentUser.NickName</a><img src="/Areas/SNS/Themes/TufenXiang/Content/images/user_3.jpg"></p>
            <div id="cover">
               <ul>
                  <li><a href="@(ViewBag.BasePath)Profile/Posts?type=fellow">我的图分享</a></li>
                  <li><a href="@(ViewBag.BasePath)UserCenter/Inbox">我的消息</a></li>
                  <li><a href="@(ViewBag.BasePath)UserCenter/Personal">账号设置</a></li>
                  <li><a href="@(ViewBag.BasePath)Account/Logout">退出</a></li>
               </ul>
            </div>
      </div>
  </div>
</div>
</div>
