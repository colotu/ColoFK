@using System.Web.Mvc.Html
@model List<YSWL.MALL.Model.Settings.MainMenus>
@{
    string cid = Request.RequestContext.RouteData.Values["cid"] != null ? Request.RequestContext.RouteData.Values["cid"].ToString() : "";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(".search_box table.mg tr:even").css("background", "#f5f5f5");
        $("#tKeyWord").keyup(function () {
            var keyword = $(this).val();
            if (keyword.length < 1) {
                $(".lxxg").hide();
            }
            else {
                $(".lxxg").show();
            }
            if (keyword.length > 4) {
                keyword = keyword.substring(0, 4) + "..";
            }
            $("#tPhoto").text(keyword);
            $("#tAlbums").text(keyword);
            $("#tUser").text(keyword);
            $("#tGroups").text(keyword);
            $("#btnSearch").click(function () {
                $(".lxxg").hide();
            });
        });
    });
</script>
<script type="text/javascript">
    $(function () {
        $('.nav_left').find("li").last().css("border", "0px");
        var tkeyword = $.getUrlParam("keyword") == null ? "" : $.getUrlParam("keyword");
        $("#tKeyWord").val(tkeyword);
        $(".btnAlbums").click(function () {
            var keyword = $("#tKeyWord").val();
            window.location = $YSWL.BasePath + "Search/Albums?type=hot&keyword=" + encodeURIComponent(keyword);
        });
        $(".btnUser").click(function () {
            var keyword = $("#tKeyWord").val();
            window.location = $YSWL.BasePath + "Search/User?keyword=" + encodeURIComponent(keyword);
        });
        $(".btnGroups2").click(function () {
            var keyword = $("#tKeyWord").val();
            window.location = $YSWL.BasePath + "Search/Groups?keyword=" + encodeURIComponent(keyword);
        });
        $(".btnPhoto").click(function () {
            var keyword = $("#tKeyWord").val();
            window.location = $YSWL.BasePath + "Search/Photo?type=hot&keyword=" + encodeURIComponent(keyword);
        });
    });
</script>
<script type="text/javascript">
    $(function () {
        $(".searchlist").click(function () {
            var keyword = $("#tKeyWord").val();
            if (keyword) {
                window.open("@(ViewBag.BasePath)Search/Photo?type=hot&keyword=" + encodeURIComponent(keyword));
            } else {
                window.open("@(ViewBag.BasePath)Search/Photo/hot/");
            }
        });
        $("#show").mouseover(function () {
            $(".li_3_content").show();
        });
        $(".li_3_content").mouseover(function () {
            $(".li_3_content").show();
        });
        $("#show").mouseout(function () {
            $(".li_3_content").hide();
        });
    })
</script>
<style type="text/css">
.li_3_content { position: absolute; top:48px;  z-index: 99999;  text-align:left;display: none;  width:680px; padding:15px; border:#ccc 1px solid; border-top:none; background-color:#FFF; }
.li_3_content a:hover { color: #f18336 !important; }
 .li_3_content ul li {
      display: inline;
font-size: 14px;
font-weight: normal;
vertical-align: middle;
padding-left: 15px;
  
     margin: 7px;
 }
 .li_3_content ul li a {
       color: #2466b7;
 }
  
</style>
