                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        if ($("#sns@(cid)")) {
            $("#sns@(cid)").css("background", "#ff4981").css("display", "block");
            $("#snsindex").removeClass("nav1").addClass("nav3");
        }
        $(".searchlist").click(function () {
            var keyword = $("#tKeyWord").val();
            if (keyword) {
                window.open("@(ViewBag.BasePath)Search/Product?type=hot&keyword=" + encodeURIComponent(keyword));
            }
            else {
                window.open("@(ViewBag.BasePath)Search/Product/hot/");
            }
        })
    })
</script>
