                    <p class="txtcontent_2">
                        <a href="@ViewBag.BasePath">首页<img src="/Areas/SNS/Themes/TufenXiang/Content/images/nav2.jpg" /></a></p>
                    <div class="li_3_content">
                          @Html.Action("CategoryList", "Partial", new { Cid = 0, Top = -1, Type=1,ViewName = "_FirstChild" })
                    </div>
                </div>
                <ul style="float: left">
                    @foreach (YSWL.MALL.Model.Settings.MainMenus item in Model)
                    {
                        if (item.URLType == 3)
                        {
                        <li><a href="@(ViewBag.BasePath)Photo/Index/-1/@item.NavURL/all/hot">@item.MenuName</a></li>
