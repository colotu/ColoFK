
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.SNS.GroupTopics>
       @{
        
    Layout = null;
}
<div class="content_post">

@if (Model != null)
{
     foreach (YSWL.MALL.Model.SNS.GroupTopics item in Model)
     {
           <div class="content_post_one" style=" margin-top:25px">
               
               <dl class="chunk"><a style=" font-size:18px" href="@(ViewBag.BasePath)Group/TopicReply?id=@item.TopicID">@item.ReplyCount</a></dl>
               <dl class="con1">
                   <dt class="con1_1"><a href="@(ViewBag.BasePath)Group/TopicReply?id=@item.TopicID">@item.Title</a></dt>
                   <dd class="con1_2">
                       <p class="con1_2_a"><a href="@(ViewBag.BasePath)User/Posts/@item.CreatedUserID"><img width="15px" height="15px" alt="@(item.CreatedNickName)"  src="/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/@(item.CreatedUserID).jpg" onerror="this.onerror='';this.src='/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/default.jpg';" /></a></p>
                       <p class="con1_2_b"><a href="@(ViewBag.BasePath)User/Posts/@item.CreatedUserID">@item.CreatedNickName</a></p>
                   </dd>
               </dl>
               <dl class="reply">
                   <p>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
               
                   @if (ViewBag.IsCreator != null && ViewBag.IsCreator)
                   {
                       if (item.IsRecomend == 0)
                       {
           
                           <a href="javascript:void(0)" class="topicRecommand" topicid="@item.TopicID">推荐</a>
                           <a style="display:none" href="javascript:void(0)" class="CancellTopicRecommand" topicid="@item.TopicID">取消推荐</a>
                       }
                       else
                       {
               
                           <a style="display:none" href="javascript:void(0)" class="topicRecommand" topicid="@item.TopicID">推荐</a>
                           <a href="javascript:void(0)" class="CancellTopicRecommand" topicid="@item.TopicID">取消推荐</a>
                       }
                       <a href="javascript:void(0)" class="DeleteTopic" topicid="@item.TopicID">删除</a>
                   }  <a href="@(ViewBag.BasePath)Group/TopicReply?id=@item.TopicID">回复</a>
               </dl>
               <div class="clear"></div>
           </div>
     }
}
        <div class="clear"></div>
        </div>

   <div class="pages" style="background-image: none;">
        <!--jQuery Ajax Paging Start-->
        @Ajax.Pager(Model, new PagerOptions()
       {
           CssClass = "in_pages",
           PageIndexParameterName = "page",
           NumericPagerItemCount = 5,
           CurrentPagerItemTemplate = "<p class=\"in_s\">{0}</p>",
           NumericPagerItemTemplate = "<p>{0}</p>",
           NavigationPagerItemTemplate = "<p>{0}</p>"
       }).AjaxOptions(x=> x.SetUpdateTargetId("YSWLToplist"))
        <!--jQuery Ajax Paging End-->
</div>

      