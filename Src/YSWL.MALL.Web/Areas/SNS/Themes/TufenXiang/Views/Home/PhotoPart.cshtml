@using System.Web.Mvc.Html
@model List<YSWL.MALL.Model.SNS.Photos>
<script src="/Areas/SNS/Themes/TufenXiang/Content/Scripts/jquery.hoverdelay.js" type="text/javascript"></script> 
<script type="text/javascript">
         $(document).ready(function () {
             $('.box_a').each(function() {
                 var that = $(this);
                 that.hoverDelay({
                     hoverEvent: function() {
                         $(this).find(".toll_info").animate({ "top": "0px" }, 1200);
                     },
                     outEvent: function() {
                         $(this).find(".toll_info").animate({ "top": "220px" }, 600);
                     }
                 });
             });

         });
     </script>
           <div class="main_top_a">
         <p class="thead">图友的照片<span>/TOP PHOTOS</span></p>
               <p class="more"><a href="@(ViewBag.BasePath)Photo/index">更多</a>
               </p>
      <div class="clear"></div>
      </div>
<div class="main_top_img">
    @if(Model!=null)
    {
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <div class="box">
                    <div class="box_a">
                        <a href="@item.StaticUrl" target="_blank">
                            <div class="toll_img PhotoPart" ><img  ref="@(YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbImageUrl, "T211x1280_"))"/></div>
                            <div class="toll_info" style="width: 220px; top: 220px " ><p>@item.Description</p></div>
                        </a>
                    </div>
                </div>
                <div class="pinglun">
                    <p><img src="/Areas/SNS/Themes/TufenXiang/Content/images/main9.jpg"/>@item.FavouriteCount</p>
                    <p><img src="/Areas/SNS/Themes/TufenXiang/Content/images/main11.jpg"/>@item.CommentCount</p>
                    <div class="clear"></div>
                </div>
                <div class="author">
                    <div class="author_left"><a href="@(ViewBag.BasePath)User/Posts?uid=@(item.CreatedUserID)"><img src="/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/@(item.CreatedUserID).jpg" width="35px"/></a></div>
                    <div class="author_mid"><a href="@(ViewBag.BasePath)User/Posts?uid=@(item.CreatedUserID)">@item.CreatedNickName</a></div>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </li>
        }
    </ul>
    }
    <div class="clear"></div>
</div>
