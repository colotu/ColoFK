@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.SNS.UserBlog>
<div class="content_post">

@if (Model != null)
{
     foreach (var item in Model)
     {
           <div class="content_post_one" style=" margin-top:25px">
@*           <dl class="chunk"><a href="javascript:;">149</a></dl>
*@
               <dl class="chunk"><a style=" font-size:18px" href="@(ViewBag.BasePath)Blog/BlogDetail?id=@item.BlogID">@item.PvCount</a></dl>
               <dl class="con1">
                   <dt class="con1_1"><a  class="bloglink"  href="@(ViewBag.BasePath)Blog/BlogDetail?id=@item.BlogID">@item.Title</a></dt>
                   <dd class="con1_2">
                      <p class="con1_2_a"><a href="@(ViewBag.BasePath)User/Posts/@item.UserID"><img width="15px" height="15px" alt="@(item.UserName)"  src="/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/@(item.UserID).jpg" onerror="this.onerror='';this.src='/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/default.jpg';" /></a></p>
                      <p class="con1_2_b"><a href="@(ViewBag.BasePath)User/Posts/@item.UserID">@item.UserName</a></p>
                   </dd>
               </dl>
               <dl class="reply">
                   <p>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                   <p>评论（@item.TotalComment）| 喜欢 (@item.TotalFav)</p>
               </dl>
           <div class="clear"></div>
           </div>
     }
}
        <div class="clear"></div>
        </div>
    <div class="pages" style="background-image: none;">
        <!--jQuery Ajax Paging Start-->
       @if (Model != null)
       {
           Ajax.Pager(Model, new PagerOptions()
           {
               CssClass = "in_pages",
               PageIndexParameterName = "page",
               NumericPagerItemCount = 5,
               CurrentPagerItemTemplate = "<p class=\"in_s\">{0}</p>",
               NumericPagerItemTemplate = "<p>{0}</p>",
               NavigationPagerItemTemplate = "<p>{0}</p>"
           }).AjaxOptions(x => x.SetUpdateTargetId("YSWLToplist"));
       }
        <!--jQuery Ajax Paging End-->
 </div>
           

      