@using YSWL.MALL.Model.SNS
@model YSWL.MALL.ViewModel.SNS.PhotoList
@{
    <script type="text/javascript">
        $(function () {

            $('.emerge').unbind('hover').hover(function () {
                $(this).find('#dodge').show();
                $(this).find('#delAlbumDetail').show();
            }, function () {
                $(this).find('#dodge').hide();
                $(this).find('#delAlbumDetail').hide();
            });
            resizeImg('.imagewalls_id', 211, 1280);
        });
    </script>
    foreach (PostContent item in Model.PhotoListWaterfall)
    {
    <div class="i_w_y">
        <div id="emerge" class="emerge">
            <p>
                <a class="pic_load" href="@item.StaticUrl">
                    <img ref="@(YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbImageUrl, "T211x1280_"))" alt="@item.TargetDescription" />
                </a>
            </p>
            @if (ViewBag.IsCurrentUser == true)
            {
                <div id="delAlbumDetail">
                    <a href="javascript:;" class="delAlbumDetail" albumid="@Model.AlbumModel.AlbumID" targetid="@item.TargetId" imagetype="Photo">
                        <img src="/Areas/SNS/Themes/TufenXiang/Content/images/del-btn-19x19.png" /></a></div>
            }
            <div id="dodge" class="addalbum"  imagetype="Photo"  targetid=@item.TargetId imageurl="@(YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbImageUrl, "T116x170_"))" >
                <a href="javascript:;">
                    <img src="/Areas/SNS/Themes/TufenXiang/Content/images/user_21.png" />
                </a>
            </div>
        </div>
        <div class="search_com">
            <div class="pinglun">
                <p class="search_com_a1">
                    <a href="javascript:;" class="favourite"  imagetype="Photo" targetid=@item.TargetId>
                        <img src="/Areas/SNS/Themes/TufenXiang/Content/images/main10.jpg" /></a><a href="javascript:;">@item.FavouriteCount</a></p>
                <p class="search_com_b" >
                    <a href="javascript:;">
                        <img src="/Areas/SNS/Themes/TufenXiang/Content/images/main11.jpg" /></a><a href="javascript:;"
                            class="commentcount">@item.CommentCount 评论</a></p>
                <input class="TargetId" type="hidden" value="@item.TargetId" imagetype="Photo"/>
                <div class="clear">
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="search_iss">
            @{if (item.CommentCount > 0 && item.CommentList.Count > 0)
              {
                  Html.RenderPartial("~/Areas/SNS/Themes/TufenXiang/Views/Partial/TargetListComment.cshtml", item.CommentList);

              }}
            <div class="clear">
            </div>
        </div>
    </div>
    }
}
