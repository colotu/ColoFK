@model List<YSWL.MALL.Model.Shop.Order.OrderInfo>
@if (Model != null && Model.Count > 0)
{
    <div class="mes-roll">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="swiper-slide roll-line">
                        @Model[i].SupplierName<span class="main-color">@Model[i].CreatedDate.ToString("HH:mm")</span>成交一笔
                    </div>
                }
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var liveTradingSwiper= new Swiper('.mes-roll .swiper-container', {
            direction: 'vertical',
            speed: 300,
            autoplay: 3000,
            loop: true,
            grabCursor: true,
        })
    </script>
}

