@using Webdiyer.WebControls.Mvc
@model  List<YSWL.MALL.Model.Shop.Supplier.SupplierInfo>
@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <li>
            <a href="@(ViewBag.BasePath)store/@item.SupplierId">
                <div class="list_item">
                    <div class="shop_pic">
                        <img src="@(ViewBag.BasePath)Partial/SuppLogo?id=@(item.SupplierId)&size=T200X200" alt="@item.ShopName" onerror="this.onerror = ''; this.src = '/Images/Shop/store-default.jpg'">
                    </div>
                    <div class="shop_info">
                        <div class="shop_name">
                            <span class="word_shop">铺</span>
                            @item.ShopName
                        </div>
                        <div class="pro-quantity">商品总数：<span class="quantity-num">@item.ProductCount</span>件</div>
                        <div class="shop_address">
                            @item.Address
                        </div>
                    </div>
                </div>
            </a>
        </li>
    }
}
