@model List<YSWL.MALL.Model.Settings.Advertisement>
@if (Model != null && Model.Count > 0)
{
    <div class="floor graphic-img-list">
        <div class="floor_container mt">
            <div class="floor_item">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="container_col2">
                        <a href="@Model[i].NavigateUrl">
                            <img src="@Model[i].FileUrl" alt="@Model[i].AdvertisementName">
                        </a>
                    </div>
                    if (i ==1)
                    {
                        break;
                    }
                }
            </div>
            <div class="floor_item">
                @for (int i = 2; i < Model.Count; i++)
                {
                    <div class="container_col2">
                        <a href="@Model[i].NavigateUrl">
                            <img src="@Model[i].FileUrl" alt="@Model[i].AdvertisementName">
                        </a>
                    </div>
                    if (i == 3)
                    {
                        break;
                    }
                }
            </div>
        </div>
    </div>
}