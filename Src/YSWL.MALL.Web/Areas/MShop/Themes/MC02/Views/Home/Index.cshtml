<!--swiper-->
<script src="/Areas/MShop/Themes/mc02/Content/Scripts/timeCountDown.js" type="text/javascript"></script>
    <script type="text/javascript">
        //显示地区
        var regionName = $.cookie('deliveryareas_lastRegionName');
        if (regionName == null || regionName == ""){
            regionName = "请选择";
        }
        $('#l_regionName').text($.cookie('deliveryareas_lastRegionName'));        
        $(function () {
            $('#body').addClass('m_home');

            if ($('#adRotation .swiper-container').length > 0) {
                //banner图滑动
                var mySwiper = new Swiper('#adRotation .swiper-container', {
                    direction: 'horizontal',
                    loop: true,
                    pagination: '.swiper-pagination',
                    autoplay: 5000
                });
            }

            if ($('#countDownList').length > 0) {
                var swiper = new Swiper('#countDownList', {
                    slidesPerView: 2.5,
                    paginationClickable: true,
                    spaceBetween: 10
                });
            }         

            //限时抢购倒计时
            $(".txtenddate").each(function (){
                $(this).removeClass('txtenddate');
                var endDate = $(this).attr("endDate");
                var productId = $(this).attr("Product");
                var myclass = new CountDown2();
                myclass.init({
                    id: 'txtenddate_' + productId,
                    //天数
                    day_Dom: $("#dayEnd_" + productId),
                    //小时 
                    hour_Dom: $("#hourEnd_" + productId),
                    //分钟
                    min_Dom: $("#minEnd_" + productId),
                    //秒
                    sec_Dom: $("#secEnd_" + productId),
                    dayMainElement: $("#dayMainElement_" + productId),
                    hourMainElement: $("#hourMainElement_" + productId),
                    endTime: endDate
                });
            });
        });
    </script>
} 
