                <div class="floor_item">
                    <div class="pro_container2_list">
                        @Html.Action("Index", "Recommend", new { type = "irec", vName = "IndexRec", ajaxVName = "_IndexRec", pageSize = 30 })
                    </div>
                </div>
            </div>
        </div>

        <!--加载提示信息--->
        @Html.Partial("/Areas/MShop/Themes/mc02/Views/Partial/_LoadTip.cshtml")
        <!-- ################-->
        <!-- END TOP MENU -->
        <!-- ################-->
        <!--底部菜单---->
        <div class="bottom">
        </div>
        @Html.Partial("/Areas/MShop/Themes/mc02/Views/Partial/_FooterNav.cshtml")
