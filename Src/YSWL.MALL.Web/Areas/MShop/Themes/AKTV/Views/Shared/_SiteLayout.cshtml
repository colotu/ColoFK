<!DOCTYPE html>
<html>
<head>
    @*全局模版*@
    @Html.YSWLSEO(PoweredBy: true)
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <link href="/Scripts/msgbox/css/msgbox.css" rel="stylesheet"  />
    <link href="/Areas/MShop/Themes/AKTV/Content/Css/global.css" rel="stylesheet"/>
    <link href="/Areas/MShop/Themes/AKTV/Content/Css/style.css" rel="stylesheet"/>

    <script src="/Scripts/jquery-1.8.3.min.js" type="text/javascript"></script> 
    <script src="/Scripts/jquery/maticsoft.jquery.min.js" type="text/javascript"  ></script> 

    <script src="/Scripts/msgbox/js/msgbox.js"  type="text/javascript" ></script>
    <script type="text/javascript" language="javascript">        var $YSWL = { BasePath: '@(ViewBag.BasePath)', CurrentArea: '@(ViewBag.CurrentArea)' } </script>
    <script type="text/javascript" src="/Areas/MShop/Themes/AKTV/Content/Scripts/categorySlide.js"></script>
    @RenderSection("headtop", false)  
    @RenderSection("head", false)
</head>
    <body>
          <div id="shop_page_contents">
        <div id="cover_layer">
        </div>
        @RenderBody()
        </div>
        <div id="footer_points">
        </div>
        @RenderSection("foot", false)
        
        <script type="text/javascript">
            if (window.navigator.userAgent.indexOf('YSWL_Shop_APP') == -1) {
                //非手机APP访问
                $('.footer,.top').show();
            }
            $(function () {
                $("input").focus(function () {
                    $('footer').hide();
                });
                $("input").click(function () {
                    $('footer').hide();
                });
                $("input").blur(function () {
                    $('footer').show()
                    //$('footer').delay(3000).show();
                });

                $("textarea").click(function () {
                    $('footer').hide();
                });
                $("textarea").focus(function () {
                    $('footer').hide();
                });
                $("textarea").blur(function () {
                    $('footer').delay(800).show();
                });
            })
        </script>
    </body>
</html>
