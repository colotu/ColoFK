@{
    Layout = "/Areas/MShop/Themes/AKTV/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "个人中心-我的佣金";
}
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Shop.Commission.CommissionDetail>

      <link href="/Areas/MShop/Themes/AKTV/Content/Css/UserCenter/style.css" rel="stylesheet"/>
<link href="/Areas/MShop/Themes/AKTV/Content/Css/UserCenter/userstyle.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<div class="yy">
</div>
<div class="index_h1">
    我的佣金</div>

<div style="font-family: 微软雅黑; font-size: 14px; margin-left: 10px;">
    您当前的推广佣金:<span style="color: #ff8a00;"> @ViewBag.AllFee.ToString("F") </span>
</div>
@if (Model != null)
{
    foreach (var item in Model)
    {
    <div class="home_piclist">
        <div class="ddnum1" style="height: auto;">
            <span>日期：</span> @item.TradeDate.ToString("yyyy-MM-dd HH:mm:ss")<br />
            <span>规则：</span>@item.RuleName<br />
            <span>佣金：</span>
            @if (item.TradeType == 1)
            {
                <strong style="color: #ff8a00;">+@item.Fee.ToString("F")</strong>
            }
            else
            {
                <strong style="color: #33982e;">-@item.Fee.ToString("F")</strong>
            }<br />
            <span>说明：</span>@item.Remark 推广商品【<a href="@(ViewBag.BasePath)Product/Detail/@item.ProductId">@item.Name</a>】
        </div>
    </div>
    
    }
    @Html.Pager(Model, new PagerOptions
{
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 3,
    NumericPagerItemTemplate = "<p>{0}</p>",
    NavigationPagerItemTemplate = "<p>{0}</p>",
    CssClass = "in_pages_m"
})
}
