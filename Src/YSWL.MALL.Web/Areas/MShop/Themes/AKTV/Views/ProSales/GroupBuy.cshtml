        $(".txtenddate").each(function () {
            var endDate = $(this).attr("endDate");
            var productId = $(this).attr("Product");
            var myclass = new CountDown();
            myclass.init({
                id: 'txtenddate_' + productId,
                //天数
                day_Dom: $("#dayEnd_" + productId),
                //小时 
                hour_Dom: $("#hourEnd_" + productId),
                //分钟
                min_Dom: $("#minEnd_" + productId),
                //秒
                sec_Dom: $("#secEnd_" + productId),
                endTime: endDate
            });
        });

        $(".regionOK").click(function () {
            var regionId = $("select:eq(0)").val();
            if (regionId == "") {
                ShowFailTip("请选择地区");
                return false;
            }
            if ($("select:eq(1)").val()) {
                regionId = $("select:eq(1)").val();
            } else {
                ShowFailTip("请选择市");
                return false;
            }
            if ($("select:eq(2)").val()) {
                regionId = $("select:eq(2)").val();
            }
            window.location.href = $YSWL.BasePath + "ProSales/GroupBuy?regionid=" + regionId;
        });

