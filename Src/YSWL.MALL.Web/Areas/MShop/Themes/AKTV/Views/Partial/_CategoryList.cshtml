@model List<YSWL.MALL.Model.Shop.Products.CategoryInfo>
<div id="category">
    <div class="close" style="cursor: pointer;width: 37px;height: 37px;top: 0;">
    </div>
    <dl>
        @if (null != Model && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                if (item.Depth == 1)
                {
            <dt><a href="@(ViewBag.BasePath)p/@item.CategoryId?pageSize=16">
                          @YSWL.Common.StringPlus.SubString(item.Name, 12, "...")
                </a></dt>
                }
                else
                {
            <dd>
                <a href="@(ViewBag.BasePath)p/@item.CategoryId?pageSize=16">&gt; 
                          @YSWL.Common.StringPlus.SubString(item.Name, 12, "...")
                </a></dd>
                }

            }
        }
    </dl>
</div>
