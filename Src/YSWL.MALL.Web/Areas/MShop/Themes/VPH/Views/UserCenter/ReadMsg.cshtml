 @{
     Layout = "/Areas/MShop/Themes/VPH/Views/Shared/_BaseLayout.cshtml";
     ViewBag.Title = "个人中心";
}
@model  YSWL.MALL.Model.Members.SiteMessage
<link href="/Areas/MShop/Themes/VPH/Content/Css/UserCenter/userstyle.css" rel="stylesheet" type="text/css" />
<script src="/Areas/MShop/Themes/VPH/Content/Scripts/UserCenter/readMsgSendMsg.js" type="text/javascript"></script>


<header id="header" class="header clearfix">
    <div class="head_left fl"><a href="javascript:;" onclick="history.go(-1);"><span class="h_back"></span></a></div>
    <span class="headtit">读取消息</span>
    <div class="head_right fr"><a href="@(ViewBag.BasePath)"><span class="h_home"></span></a></div>
</header>
 <div class="connerdiv">

  @if (Model != null)
  {
      <div class="logincontent" style="text-align:center;">
          <span  class="tipClass"> &nbsp; </span>  
   <div  id="divReplyMsg">
          <input type="hidden" value="@Model.SenderID" id="hidreceiverid" />
       </div>
          <div class="home_newlist">
                 <div class="home_newtitle">
                     <span>@Model.SenderUserName</span> <small> @(Model.SendTime.HasValue ? Model.SendTime.Value.ToString("yyyy-MM-dd HH:mm:ss") : "")</small></div>
                 <div class="home_newcontent"  title="未读消息,点击">
                     @(string.IsNullOrEmpty(Model.Title) ? "" : Model.Title + ":")@Model.Content 
                     <p><a href="javascript:;" class="DelReceiveMsg u-btn" itemid="@Model.ID">删除</a> </p></div>
             </div>

      </div>
      
      
  }
 
 </div>    
 <div class="connerdiv">
    <dl class="connerbox">
     <dd>
                      <span>昵称：</span>
                      <input name="txtuserName" id="txtNickName" placeholder="昵称" type="text"   class="text_input" />
                  </dd>
                  <dd><span>主题：</span>
                    <input type="text"   id="txtTitle" placeholder = "主题" name="txtNickName" class="text_input"> <br /> 
                  </dd>
                  <dd>
                      <span>内容：</span>
                         <textarea id="txtContent" name="txtSingature" class="text_input" placeholder = "内容"
                                                  rows="5" cols="20" style="height:80px;"></textarea>
                  </dd>
    </dl> 


 <div class="space15"></div>
        <input type="submit" id="registerSubmit" value="" style="display: none;" />
        <input type="button" class="btn_red largerbtn longbtn" id="btnSendMsg" value="发送" >
        <div class="space15"></div>
</div>                 
        
          
 


