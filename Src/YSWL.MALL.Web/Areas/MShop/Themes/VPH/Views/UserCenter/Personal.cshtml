 @{
     Layout = "/Areas/MShop/Themes/VPH/Views/Shared/_BaseLayout.cshtml";
     ViewBag.Title = "个人中心-修改信息";
 }
 @model YSWL.MALL.Model.Members.UsersExpModel  
<script src="/Areas/MShop/Themes/VPH/Content/Scripts/UserCenter/updateuserinfo.js" type="text/javascript"></script>
<script src="/Areas/MShop/Themes/VPH/Content/Scripts/UserCenter/DataPicker4CN.js" type="text/javascript"></script>     
<link href="/Scripts/jqueryui/jquery-ui-1.8.19.custom.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jqueryui/jquery-ui-1.8.19.custom.min.js" type="text/javascript"></script>
<style type="text/css">
    select {
    width: 80px;
}
  .displayblock {
         display: block;
     }
</style>
<script type="text/javascript">
    $(function () {
        /***日期控件***/
        $("[id$='Birthday']").datepicker({ dateFormat: "yy-mm-dd", yearRange: ("1900:" + new Date().getFullYear()) });
        $.datepicker.setDefaults($.datepicker.regional['zh-CN']);

        $('select').addClass('text_input');
      
      
        var constellation = $("#hfConstellation").val();
        var personalstatus = $("#hfPersonalStatus").val();
        var sex = $("#hfSex").val();
        if (sex == "1") {
            $("#radman").attr("checked", true);
            $("#radwoman").attr("checked", false);
        }
        if (sex == "0") {
            $("#radman").attr("checked", false);
            $("#radwoman").attr("checked", true);
        }

        if ($("#radman").click(function () {
            $("#radwoman").attr("checked", false);
        }));

        if ($("#radwoman").click(function () {
            $("#radman").attr("checked", false);
        }));
        $("#dropConstellation").val(constellation);

        $("#dropPersonalStatus").val(personalstatus);
    });
    </script> 

<header id="header" class="header clearfix">
    <div class="head_left fl"><a href="javascript:;" onclick="history.go(-1);"><span class="h_back"></span></a></div>
    <span class="headtit">个人资料</span>
    <div class="head_right fr"><a href="@(ViewBag.BasePath)"><span class="h_home"></span></a></div>
</header>
    


    <div class="connerdiv">
          @if (Model != null)
          {
              <dl class="connerbox">
                  <input id="hfConstellation" type="hidden" value="@Model.Constellation"   />
                  <input id="hfPersonalStatus" type="hidden" value="@Model.PersonalStatus"  />
                  <input id="hfSex" type="hidden" value="@Model.Sex"  />
                  <dd>
                      <span>用户名称：</span>
                      <input name="txtuserName" id="txtPwd" type="text" value="@Model.UserName"  class="text_input" readonly="readonly"/>
                  </dd>
                  <dd><span>昵&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  称：</span>
                    <input type="text" value="@Model.NickName"   id="txtNickName" placeholder = "昵称" name="txtNickName" class="text_input"> <br /> 
                  </dd>
                  <dd>
                      <span>邮&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;箱：</span>
                      <input id="txtEmail" name="txtEmail" type="text" value="@Model.Email"  placeholder = "Email"  class="text_input">
                  </dd>
                  <dd>
                      <span>性&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;别：</span>
                       <input type="radio" name="radman" value="1" id="radman" class="dan" /><label>男</label>
                       <input type="radio" name="radwoman" value="0" id="radwoman" class="dan" /><label>女</label>
                  </dd>
                  <dd>
                      <span>手机号码：</span>
                      <input id="txtPhone" name="txtPhone" type="text" value="@Model.Phone" placeholder = "手机号码" class="text_input" />
                  </dd>
                  <dd>
                      <span>固定电话：</span>
                      <input id="txtTelPhone" name="txtTelPhone" type="text" value="@Model.TelPhone"  placeholder = "固定电话"    class="text_input" /><br />
                  </dd>
                  <dd>
                      <span>生&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;日：</span>
                        @if (Model.Birthday.HasValue)
                                        {
                                            <input id="txtBirthday" name="txtBirthday" placeholder = "生日" type="text" value="@Model.Birthday.Value.ToString("yyyy-MM-dd")"   class="text_input"/>
                                        }
                                        else
                                        {
                                            <input id="txtBirthday" name="txtBirthday" type="text" placeholder = "生日"   class="text_input"/>
                                        }
                  </dd>
                  <dd>
                      <span>星&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;座：</span>
                         <select name="dropConstellation" id="dropConstellation"   style="height: 28px;width:80px">
                                            <option value="0">请选择</option>
                                            <option value="1">水瓶座</option>
                                            <option value="2">双鱼座</option>
                                            <option value="3">白羊座</option>
                                            <option value="4">金牛座</option>
                                            <option value="5">双子座</option>
                                            <option value="6">巨蟹座</option>
                                            <option value="7">狮子座</option>
                                            <option value="8">处女座</option>
                                            <option value="9">天秤座</option>
                                            <option value="10">天蝎座</option>
                                            <option value="11">射手座</option>
                                            <option value="12">魔羯座</option>
                                        </select>
                  </dd>
                  <dd>
                      <span>职&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;业：</span>
                      
                      <select name="dropPersonalStatus" id="dropPersonalStatus" class="text_input" style="height: 28px;width:80px;">
                          <option value="0">请选择</option>
                          <option value="1">白领</option>
                          <option value="2">学生</option>
                      </select>
                  </dd>
                  <dd>
                      <span>个性签名：</span>
                         <textarea id="txtSingature" name="txtSingature" class="text_input" placeholder = "个性签名"
                                                  rows="5" cols="20" style="height:80px;">@Model.Singature</textarea>
                  </dd>
              </dl>
          }
        <div class="space15"></div>
        <input type="submit" id="registerSubmit" value="" style="display: none;" />
        <input type="button" class="btn_red largerbtn longbtn" id="btnSureChange" value="确认修改" >
        <div class="space15"></div>
    </div>

 <div class="modal hide ui-error "  style="width: 100%; top: 0px;  left: 0px;">
<div class="modal-body ">
<div class="modal-message"><a href="javascript:void(0)" class="closeBtn">×</a><div id="errorMsg"></div></div></div></div>

