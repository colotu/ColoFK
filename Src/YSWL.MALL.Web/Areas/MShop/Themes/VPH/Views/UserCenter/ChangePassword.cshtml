 @{
     Layout = "/Areas/MShop/Themes/VPH/Views/Shared/_BaseLayout.cshtml";
     ViewBag.Title = "个人中心-修改密码";
 }
<script src="/Areas/MShop/Themes/VPH/Content/Scripts/UserCenter/updatepassword.js" type="text/javascript"></script>
           <style>
     .displayblock {
         display: block;
     }
 </style>
<header id="header" class="header clearfix">
    <div class="head_left fl"><a href="javascript:;" onclick="history.go(-1);"><span class="h_back"></span></a></div>
    <span class="headtit">修改密码</span>
    <div class="head_right fr"><a href="@(ViewBag.BasePath)"><span class="h_home"></span></a></div>
</header>

<div class="connerdiv">
    <div class="connerdiv">
        <dl class="connerbox">
            <dd><span>原密码：</span>
                <input name="txtPwd" id="txtPwd" type="password" placeholder = "原密码"  class="text_input" />
            </dd>
            <dd><span>新密码：</span>
                <input name="txtNewPwd" id="txtNewPwd" type="password"  placeholder = "新密码" class="text_input" />
            </dd>
            <dd><span>确认密码：</span>
                <input name="txtConfirmPwd" id="txtConfirmPwd" type="password"  placeholder = "确认密码" class="text_input" />
            </dd>
        </dl>
        <div class="space15"></div>
        <input type="submit" id="registerSubmit" value="" style="display: none;" />
        <input type="button" class="btn_red largerbtn longbtn" id="btnSureChange" value="修改" >
        <div class="space15"></div>
    </div>
</div>
 <div class="modal hide ui-error "  style="width: 100%; top: 0px;  left: 0px;">
<div class="modal-body ">
<div class="modal-message"><a href="javascript:void(0)" class="closeBtn">×</a><div id="errorMsg"></div></div></div></div>