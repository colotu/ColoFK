@model List<YSWL.MALL.Model.Shop.Products.ProductInfo>
@if (Model != null && Model.Count > 0)
{
    <div class="products_cnxh">
        <ul style="margin-top: 15px;">
            @foreach (var item in Model)
            {
                <li><a href="@(ViewBag.BasePath)p/d/@item.ProductId">
                    <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T115X115_")" style="width: 99px;height: 99px;"/><span>￥@item.LowestSalePrice.ToString("F")</span></a></li>
            }
        </ul>
    </div>
}
