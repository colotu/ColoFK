 @{
     Layout = "/Areas/MShop/Themes/F1/Views/Shared/_BaseLayout.cshtml";
     ViewBag.Title = "微信用户绑定";
 }

<script src="/Areas/MShop/Themes/F1/Content/Scripts/UserCenter/DefaultLogin.js" type="text/javascript"></script>

 @model YSWL.MALL.ViewModel.Shop.LogOnModel 
<div data-role="content" class="ui-content" role="main">
      <input   type="hidden"  value="@ViewBag.User" id="txtUser"/>
             <input   type="hidden"  value="@ViewBag.OpenId" id="txtOpenId"/>
    <div class="yy"><span id="diverror" style="margin-left:10px;margin-top:10px;" class="txterror"></span></div>
    <div class="contact-info">												
        <ul data-role="listview" data-inset="true" data-theme="d" class="ui-listview ui-listview-inset ui-corner-all ui-shadow">
            <li data-role="list-divider" role="heading" class="ui-li ui-li-divider ui-bar-b ui-first-child">微信用户绑定</li>
            <li style="padding: 5px 10px 5px 10px" class="ui-li ui-li-static ui-btn-up-d ui-last-child">
 	 
                <table style="padding: 0; margin: 0; width: 100%;">
                    <tbody><tr>
                               <td width="80px"><label for="txtLogin" class="ui-input-text"> 账户：</label></td>
                               <td>
                                   @Html.TextBoxFor(m => m.UserName, new { Class = "ui-input-text ui-body-c", id = "txtLogin" })
                               </td>
                           </tr>
                        <tr   >
                            <td width="80px"></td>
                            <td colspan="2" id="divLoginTip" class="cart-editalertinfo">@Html.ValidationMessageFor(m => m.UserName)</td>
                        </tr>
								
                        <tr>
                            <td width="80px"><label for="password" class="ui-input-text">密码：</label></td>
                            <td>
                                @Html.PasswordFor(m => m.Password, new { Class = "ui-input-text ui-body-c", id = "password" }) 
                            </td>
                        </tr>
                        <tr id="phoneinfo-layout"  >
                            <td width="80px"></td>
                            <td colspan="2" id="divPasswordTip" class="cart-editalertinfo" >@Html.ValidationMessageFor(m => m.Password)</td>
                        </tr>	
                           
                    </tbody></table>
            </li>
        </ul>
        <a data-role="button" href="javascript:;" rel="external"  id="bindsubmit"  data-theme="b" data-corners="true" data-shadow="true" data-iconshadow="true" data-wrapperels="span" class="ui-btn ui-btn-up-b ui-shadow ui-btn-corner-all">
            <span class="ui-btn-inner"><span class="ui-btn-text">绑定</span></span>
        </a>
    </div>
 
 
</div>
 



