@{
    Layout = "~/Areas/MShop/Themes/F1/Views/Shared/_BaseLayout.cshtml";
}
<div data-role="content" class="ui-content" role="main">
    <div class="m-left"   >
        <p>  您的账户余额不足，请充值。</p>
        <p>
            订单号：@(ViewBag.OrderCode)
        </p>
        <p>应付金额：<strong class="ftx-01">@(ViewBag.Amount.ToString("F"))元</strong></p>
         <p>账户余额：<strong class="ftx-01">@(ViewBag.Balance.ToString("F"))元</strong></p>
     
    </div>
    <a data-role="button" href="@(ViewBag.BasePath)UserCenter/Orders" rel="external" id="btn-conti" data-theme="b" data-corners="true" data-shadow="true" data-iconshadow="true" data-wrapperels="span" class="ui-btn ui-shadow ui-btn-corner-all ui-btn-up-b">
        <span class="ui-btn-inner"><span class="ui-btn-text">查看或更改您的订单</span></span>
    </a>
</div>
<input type="hidden" value="@ViewBag.OrderId" id="OrderId"/>
<input type="hidden" value="@ViewBag.PayStatus" id="Status"/>
 