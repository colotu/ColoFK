<!DOCTYPE html>
<html>
    <head>
        @*全局模版*@
         @Html.YSWLSEO(PoweredBy: false, Title: YSWL.MALL.Web.Areas.MShop.Controllers.PartialController.GetName())  
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">
        <meta name="format-detection" content="telephone=no">
        <script src="/Scripts/jquery-1.8.3.min.js" ></script> 
        <script src="/Scripts/jquery/maticsoft.jquery.min.js" type="text/javascript"  ></script> 
        <link href="/Scripts/msgbox/css/msgbox.css" rel="stylesheet"  /> 
        <script src="/Scripts/msgbox/js/msgbox.js"  type="text/javascript" ></script>
        <script type="text/javascript" language="javascript">        var $YSWL = { BasePath: '@(ViewBag.BasePath)', CurrentArea: '@(ViewBag.CurrentArea)' } </script>
       <link href="/Areas/MShop/Themes/F1/Content/Css/style.css" rel="stylesheet" type="text/css" /> 
       <link href="/Scripts/jquery.mobile/jquery.mobile.structure-1.3.2.min.css" rel="stylesheet" type="text/css" /> 
        <link href="/Areas/MShop/Themes/F1/Content/Css/shop.css" rel="stylesheet" type="text/css" />  
     
          <script type="text/javascript">
              $(document).bind("mobileinit", function () {
                  $.mobile.ajaxEnabled = false;
                  $.mobile.page.prototype.options.degradeInputs.date = true;
              });
          </script>  

     <script src="/Scripts/jquery.mobile/jquery.mobile-1.3.2.min.js" type="text/javascript"></script> 
        <script src="/Areas/MShop/Themes/F1/Content/Scripts/iscroll-lite.js" type="text/javascript"></script>
        <script src="/Areas/MShop/Themes/F1/Content/Scripts/common.js" type="text/javascript"></script>
        @RenderSection("head", false)  
     
    </head>

    <body class="ui-mobile-viewport ui-overlay-c">
        <div data-role="page" data-add-back-btn="true" class="ui-page ui-body-c ui-page-active" id="shopindex-page" style="min-height: 608px;">
            @RenderBody()
            @RenderSection("foot", false)
            <script type="text/javascript">
                if (window.navigator.userAgent.indexOf('YSWL_Shop_APP') == -1) {
                    //非手机APP访问
                    $('.footer,.top').show();
                }
                $(function () {
                    $("input").focus(function () {
                        $('footer').hide();
                    });
                    $("input").click(function () {
                        $('footer').hide();
                    });
                    $("input").blur(function () {
                        $('footer').show()
                        //$('footer').delay(3000).show();
                    });

                    $("textarea").click(function () {
                        $('footer').hide();
                    });
                    $("textarea").focus(function () {
                        $('footer').hide();
                    });
                    $("textarea").blur(function () {
                        $('footer').delay(800).show();
                    });
                })
            </script>
            
 
        </div>
     
    </body>
</html>
