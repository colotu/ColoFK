        <div id="pwdTip"  class="txterror tipClass" >
            <span   class="txterror">&nbsp;</span>
        </div>
    </div>
 
    <div data-role="fieldcontain" class="ui-field-contain ui-body ui-br">
        <input name="txtNewPwd" id="txtNewPwd" type="password" data-clear-btn="true"  placeholder = "新密码" autocomplete="off" class="ui-input-text ui-body-c" /> 
        <div id="newpwdTip"  class="txterror tipClass" >
