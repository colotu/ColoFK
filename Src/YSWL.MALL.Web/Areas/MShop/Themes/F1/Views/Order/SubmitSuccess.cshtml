@{
    Layout = "~/Areas/MShop/Themes/F1/Views/Shared/_BaseLayout.cshtml";
}
<div data-role="content" class="ui-content" role="main">
    <div class="m-left">
       
        <p>^_^恭喜您，订单提交成功！ </p>
        <p>
            订单号：@ViewBag.OrderCode
        </p>
        <p>
            应付金额：@(ViewBag.OrderAmount.ToString("F"))元
        </p>
        
    </div>

    <a data-role="button" href="javascript:;" rel="external" id="btn-impay" data-theme="b" data-corners="true" data-shadow="true" data-iconshadow="true" data-wrapperels="span" class="ui-btn ui-shadow ui-btn-corner-all ui-btn-up-b">
        <span class="ui-btn-inner"><span class="ui-btn-text">立即支付</span></span>
    </a>
</div>
 
<script type="text/javascript">
    $('#btn-impay').unbind('click').bind('click', function () {
        window.location.replace("/pay/certification@(ViewBag.OrderId)/@(ViewBag.CurrentArea)");
        return;
    });
</script>
