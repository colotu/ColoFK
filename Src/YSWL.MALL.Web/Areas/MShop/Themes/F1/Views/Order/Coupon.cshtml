@{
    Layout = "~/Areas/MShop/Themes/F1/Views/Shared/_BaseLayout.cshtml";
}
@model List<YSWL.MALL.Model.Shop.Coupon.CouponInfo>
           <script src="/Scripts/jquery.cookie.js" type="text/javascript"></script>
<div data-role="content" id="cart-layout" class="ui-content" role="main">
<div class="youhuijuan_left_con"  >
    <div class="youhuijuan_left_con_zw">
       <div  id="write_coupon"  style="margin: 0 1% 0;" > 
                <div  style="width: 70%;display: inline-block;"><input id="txtcoupon" type="text" class="ui-input-text ui-body-c"   placeholder="请输入优惠劵码" /> </div>
            <a data-role="button" style=" display: inline-block;width: 24%; margin-left: 1%; vertical-align: bottom;"  href="javascript:;" rel="external"  id="entityCouponId"  data-theme="b" data-corners="true" data-shadow="true" data-iconshadow="true" data-wrapperels="span" class="ui-btn ui-btn-up-b ui-shadow ui-btn-corner-all">
                <span class="ui-btn-inner"><span class="ui-btn-text">使用</span></span>
            </a> 
      </div> 
        <div id="select_coupon" style="margin: 15px 0 0 1%; ">
        <div class="gou_title" style="font-size: 16px;"> 我的优惠劵列表(点击即可使用)</div>
           @if (Model != null && Model.Count > 0)
           {
               foreach (var item in Model)
               {
                   <ul  id="coupon_@(item.CouponCode)"  code="@item.CouponCode"  data-role="listview" data-inset="true" data-theme="d" class="ui-listview ui-listview-inset ui-corner-all ui-shadow">
         <li style="padding:5px 10px 5px 10px" class="ui-li ui-li-static ui-btn-up-d ui-first-child ui-last-child"  >
             <table style="padding: 0; margin: 0; width: 100%;">
                 <tbody>
                 <tr  >
                            <td class="align_right align_top"  style="width:80px;"><label class="ui-input-text">优惠券：</label></td>
                            <td>
                                <label class="ui-input-text">@item.CouponCode</label>  
                            </td>
                        </tr>
                     <tr>
                         <td class="align_right align_top" ><label class="ui-input-text">面值：</label></td>
                         <td  >
                            <label class="ui-input-text" ><strong style="color: #ff8a00;"> @item.CouponPrice.ToString("C")</strong></label>
                         </td>
                     </tr> 
                      <tr>
                         <td class="align_right align_top" ><label class="ui-input-text">截止日期：</label></td>
                         <td>
                           <label class="ui-input-text" >@(item.EndDate.ToString("yyyy-MM-dd").StartsWith("9999-") ? "无限制" : item.EndDate.ToString("yyyy-MM-dd"))</label>
                         </td>
                      </tr>	
                      
                     
                 </tbody></table>

         </li>
     </ul>
               }
           }
           else
           {
                <div style="padding: 12px;font-size: 14px;">
                    暂无可用优惠券</div> 
           }
        </div>
</div>
</div>
 </div>
<script type="text/javascript">
    $(function () {
        //重置返回按钮
        $('#a_back').removeAttr('onclick');
        $('#a_back').click(function () {
            $.cookie('m_so_code', "", { expires: 1, path: '/' }); //清空优惠劵码
            window.location.replace($YSWL.BasePath + "Order/SubmitOrder");
        });

        //取消使用
        $("#a_cancel").click(function () {
            cancelCoupon();
        });

        //选择现有优惠劵
        $('[id^="coupon_"]').click(function () {
            var code = $(this).attr("code");
            if (code == "") {
                ShowFailTip("请输入优惠券卡号！");
                cancelCoupon();
                return;
            }
            CheckCoupon(code);
        });

        //输入优惠劵码 使用
        $("#entityCouponId").die().click(function () {
            var code = $("#txtcoupon").val();
            if (code == "") {
                ShowFailTip("请输入优惠券卡号！");
                cancelCoupon();
                return;
            }
            CheckCoupon($("#txtcoupon").val());
        });
    });
 
    //检测优惠劵    code:优惠劵码
    function CheckCoupon(code) {
        //判断用户登录信息是否已过期 
        if (!CheckLogin()) {
            window.location.replace($YSWL.BasePath + "account/login?returnUrl=" + $YSWL.BasePath + "Order/SubmitOrder");
            return;
        }   
        $.ajax({
            type: "POST",
            dataType: "text",
            url: $YSWL.BasePath + "Order/AjaxGetCoupon",
            data: { ConponCode: code},
            success: function (data) {
                if (data == "False") {
                    ShowFailTip('服务器繁忙，请稍候再试！');
                    return;
                }
                if (data == "HasFrozen") {
                    ShowFailTip('该优惠券处于冻结状态，不能使用！');
                    return;
                }
                if (data == "UserError") {
                    ShowFailTip('请您不要用别人的优惠券！');
                    return;
                }
                if (data == "CouponExpired") {
                    ShowFailTip('该优惠券已过期！');
                    return;
                }
                if (data == "CouponNotStart") {
                    ShowFailTip('该优惠券日期不在使用范围内！');
                    return;
                }
                if (data == "No") {
                    ShowFailTip('您输入的优惠券不存在或不在使用范围内！');
                    return;
                }
                if (data == "Used") {
                    ShowFailTip('您输入的优惠券已使用！');
                    return;
                }
                if (data == "Limit") {
                    ShowFailTip('您输入的优惠券不满足最低消费金额！');
                    return;
                }
                if (data == "CategoryLimit") {
                    ShowFailTip('不满足该优惠券指定分类商品的最低消费金额！');
                    return;
                }
                if (data == "ProductLimit") {
                    ShowFailTip('不满足该优惠券指定商品的最低消费金额！');
                    return;
                }
                if (data == "SKULimit") {
                    ShowFailTip('不满足该优惠券指定商品SKU的最低消费金额！');
                    return;
                }
                if (data == "CategoryNo") {
                    ShowFailTip('该优惠券只能在购买指定分类商品时使用！');
                    return;
                }
                if (data == "ProductNo") {
                    ShowFailTip('该优惠券只能在购买指定商品时使用！');
                    return;
                }
                if (data == "SKUNo") {
                    ShowFailTip('该优惠券只能在购买指定商品规格时使用！');
                    return;
                }
                ShowSuccessTip('恭喜您，此优惠券可以使用！');
                $.cookie('m_so_code', code, { expires: 1, path: '/' }); //记录优惠劵码
                setTimeout(function () { window.location.replace($YSWL.BasePath + "Order/SubmitOrder"); }, 1000);
            }
        });
    }


    
    //检查登陆状态
    var CheckLogin = function () {
        var islogin;
        $.ajax({
            url: $YSWL.BasePath + "Account/AjaxIsLogin",
            type: 'post',
            dataType: 'text',
            timeout: 10000,
            async: false,
            success: function (resultData) {
                if (resultData != "True") {
                    islogin = false;
                    return false;
                } else {
                    islogin = true;
                    return true;
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
            }
        });
        return islogin;
    };
</script>
