@model List<YSWL.MALL.Model.Shop.Shipping.ShippingAddress>
@if (Model != null && Model.Count > 0)
{
    var item = Model[0];
         <a href="@(ViewBag.BasePath)Order/AddressInfo/@item.ShippingId" rel="external" >
        <table style="padding: 0; margin: 0; width: 100%;">
        <tbody>
            <tr>
                <td>  
                    <input id="txtAddressCount" type="hidden" value="@Model.Count"/> 
                    <label  class="ui-input-text"> @item.ShipName  &nbsp;  @item.CelPhone  </label>
                    <div class="step-content" addressId="@item.ShippingId">    
                    </div> 
                           
                </td> 
            </tr>
             <tr>
                <td>  
                 
                    <label  class="ui-input-text"> @item.EmailAddress </label>
                 
                </td> 
            </tr>
             <tr>
                <td>  
                 
                    <label  class="ui-input-text">@item.Address</label>
                 
                </td> 
            </tr>
            </tbody></table>  </a>
 
}
else
{ <a href="@(ViewBag.BasePath)Order/AddressInfo" rel="external">
                    <table style="padding: 0; margin: 0; width: 100%;">
                    <tbody><tr>
                               <td>   
                                       <input id="txtAddressCount" type="hidden" value="0" />
                                       <div class="step-title" style="display: none">
                                           <strong>收货人信息</strong><span class="step-action" id="consignee_edit_action"> </span>
                                       </div>
                                      <div class="step-content" addressid="-1">
                                      </div>
                                       <label  class="ui-input-text">      未设置收货信息     </label>   
                                  
                               </td>
                           </tr>
                       
                    </tbody></table>
    </a> 
}
