
<div data-role="footer"  data-position="fixed" data-tap-toggle="false"  data-id="shop_footer" class="ui-footer ui-bar-a" role="contentinfo">
    <div data-role="navbar" class="ui-navbar ui-mini" role="navigation">
        <ul class="ui-grid-c">
            <li class="ui-block-a">
                <a href="@ViewBag.BasePath" data-transition="slide"  data-icon="home" class="ui-btn ui-btn-up-a ui-btn-inline ui-btn-icon-top" data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="span" data-iconpos="top" data-theme="a" data-inline="true">
                    首页 
                </a>
            </li>
            <li class="ui-block-b">
                <a href="@(ViewBag.BasePath)p" data-transition="slide" data-icon="search" data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="span" data-iconpos="top" data-theme="a" data-inline="true" class="ui-btn ui-btn-inline ui-btn-icon-top ui-btn-hover-a">
                    选购
                </a>
            </li>
            <li class="ui-block-c">
                <a href="@(ViewBag.BasePath)Order/SubmitOrder" data-transition="slide"  data-icon="grid" class="ui-btn ui-btn-inline ui-btn-icon-top ui-btn-up-a" data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="span" data-iconpos="top" data-theme="a" data-inline="true"  >
                    下单
                </a>
            </li>
            <li class="ui-block-d">
                <a href="@(ViewBag.BasePath)u" data-transition="slide"   id="usercenter"   data-icon="info"  data-wrapperels="span" data-theme="a" data-inline="true" class="ui-btn ui-btn-up-a ui-btn-inline ui-btn-icon-top">
                    个人中心
                </a>
            </li>
        </ul>
    </div>
</div>

  

<script type="text/javascript">
    $(function () {
         //选中当前菜单
            var locationPathName= window.location.pathname;
            $('[data-id="shop_footer"] a').each(function () {
                if ($(this).attr('href') ==locationPathName) {
                    $(this).addClass('ui-btn-active');
                }
            });
        
        
           if ($('[data-id="shop_footer"] a.ui-btn-active').length <= 0) {
               if (locationPathName.indexOf('/u/')>-1) {
                   $('#usercenter').addClass('ui-btn-active');
               }
           }
           
    })
</script>