 @{
     Layout = "/Areas/MShop/Themes/YX/Views/Shared/_BaseLayout.cshtml";
     ViewBag.Title = "微信用户绑定";
 }

<script src="/Areas/MShop/Themes/YX/Content/Scripts/UserCenter/DefaultLogin.js" type="text/javascript"></script>
<link href="/Areas/MShop/Themes/YX/Content/Css/style.css" rel="stylesheet"type="text/css" />
<link href="/Areas/MShop/Themes/YX/Content/Css/userstyle.css" rel="stylesheet" type="text/css" />
 @model YSWL.MALL.ViewModel.Shop.LogOnModel 
<div class="top"> <span>用户登录</span>
    @Html.Partial("/Areas/MShop/Themes/YX/Views/Partial/_HeadRight.cshtml")
</div>

<div class="logincontent"    >
            <input   type="hidden"  value="@ViewBag.User" id="txtUser"/>
             <input   type="hidden"  value="@ViewBag.OpenId" id="txtOpenId"/>
    <div> @Html.TextBoxFor(m => m.UserName, new { Class = "logininput", id = "txtLogin" ,placeholder="用户名"})@* <input name="" type="text" class="logininput" />*@<br />
        <div id="divLoginTip"  class="txterror" >
                                    <span   class="txterror"> @Html.ValidationMessageFor(m => m.UserName)</span>
                                </div></div>
    <div>@Html.PasswordFor(m => m.Password, new { Class = "logininput", id = "password",placeholder="密码" }) @*<input name="" type="text" class="logininput" />*@<br />
                <div id="divPasswordTip" class="txterror">
                                    <span  class="txterror"> @Html.ValidationMessageFor(m => m.Password)</span>
                                </div>
             </div>
    <span class="login_title" style="text-align:center;"> </span>
    <div><input  type="button" value="绑定" id="bindsubmit" class="sub_btn"></div>
</div>
 
 
 



