<!DOCTYPE html>
<html>
<head>
    @*全局模版*@
    @Html.YSWLSEO(PoweredBy: true)
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <script src="/Scripts/jquery-1.8.3.min.js" type="text/javascript"></script> 
    <script src="/Scripts/jquery/maticsoft.jquery.min.js" type="text/javascript"  ></script> 
    <link href="/Scripts/msgbox/css/msgbox.css" rel="stylesheet"  />
    <link href="/Areas/MShop/Themes/YX/Content/css/footer.css" rel="stylesheet"/>


    <script src="/Scripts/msgbox/js/msgbox.js"  type="text/javascript" ></script>
    <script type="text/javascript" language="javascript">        var $YSWL = { BasePath: '@(ViewBag.BasePath)', CurrentArea: '@(ViewBag.CurrentArea)' } </script>
    @RenderSection("headtop", false)  
    @RenderSection("head", false)
</head>
<body id="body">
    @RenderBody()
    @RenderSection("foot", false)
    <script type="text/javascript">
        if (window.navigator.userAgent.indexOf('YSWL_Shop_APP') == -1) {
            //非手机APP访问
            $('.footer,.top').show();
        }
        $(function() {
            if ($('#footer')) {
                $('#footer').prev('div').css('min-height', $(window).height() - 130);
            }
        });
        $(function () {
            $("input").focus(function () {
                $('footer').hide();
            });
            $("input").click(function () {
                $('footer').hide();
            });
            $("input").blur(function () {
                $('footer').show()
                //$('footer').delay(3000).show();
            });

            $("textarea").click(function () {
                $('footer').hide();
            });
            $("textarea").focus(function () {
                $('footer').hide();
            });
            $("textarea").blur(function () {
                $('footer').delay(800).show();
            });
        })
    </script>
</body>
</html>
