 @{
     Layout = "/Areas/MShop/Themes/YX/Views/Shared/_SiteLayout.cshtml";
 }
 @using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Members.UserInvite>
                    <link href="/Areas/MShop/Themes/YX/Content/Css/style.css" rel="stylesheet" type="text/css" />
                    <link href="/Areas/MShop/Themes/YX/Content/Css/userstyle.css" rel="stylesheet" type="text/css" />

                    <div class="top">
                        <span><a href="@(ViewBag.BasePath)co">&lt;返回</a></span>
                        @Html.Partial("/Areas/MShop/Themes/YX/Views/Partial/_HeadRight.cshtml")
                    </div>
                    <div class="index_h1">
                        我的盟友
                    </div>

                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <div class="home_piclist">
                                    <div class="ddnum" >
                                        <span>日期：</span>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")<br />
                                        <span>盟友：</span>@item.UserNick<br />
                                        <span>返利情况：</span>@item.RebateDesc

                                    </div>
                                </div>

                            }
                            @Html.Pager(Model, new PagerOptions
{
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 3,
    NumericPagerItemTemplate = "<p>{0}</p>",
    NavigationPagerItemTemplate = "<p>{0}</p>",
    CssClass = "in_pages_m"
})
                        }
