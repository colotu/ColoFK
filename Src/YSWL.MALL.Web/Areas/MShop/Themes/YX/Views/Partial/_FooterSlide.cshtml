<div class="J_nav_bar y_nav_content" show="hide" id="tabMenu" style="bottom: -250px;z-index: 99999">
    <a href="javascript:;" class="btn_slide J_nav_bar_button J_ytag" data-type="2" ytag="11000">
    </a>
    <div class="search">
        <div class="inner" style="z-index: 99999;">
            <input type="search" class="input_txt J_search" placeholder="输入商品名称" style="margin-left: 0;
                margin-right: 5px; width: 90%; padding-left: 5px;">
            <input class="input_reset" type="reset" value="" style="background-color: transparent;">
        </div>
    </div>
    <div class="nav_list">
        <ul>
            <li><a href="@(ViewBag.BasePath)" class="homeclass J_ytag" ><span>首页</span></a></li>
            <li><a href="@(ViewBag.BasePath)p/c" class="cate J_ytag cateclass"><span>商品分类</span></a></li>
