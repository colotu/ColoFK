    </div>
</div>
<script type="text/javascript">
    $(function () {
        $(".btn_slide").click(function () {
            var tab = $("#tabMenu").attr("show");
            if (tab === "hide") {
                $("#tabMenu").animate({
                    bottom: 0
                }, 1000);
                $(".J_commonNav").css("opacity", "0.5").css("display", "block");
                $("#tabMenu").attr("show", "show");
            } else {
                $("#tabMenu").animate({
                    bottom: -250
                }, 1000);
                $("#tabMenu").attr("show", "hide");
                $(".J_commonNav").css("opacity", 0).css("display", "none");
            }
        });
        $(".input_reset").click(function () {
            var keyword = $(".J_search").val();
            if (keyword == "") {
                ShowFailTip('请输入关键字！');
                return;
            }
            location.href = $YSWL.BasePath + "s/0/0/hot/0-0/" + keyword;
        });
    });
</script>
