@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Shop.PromoteSales.GroupBuy>
    @if (Model != null && Model.Count > 0)
    {
    <div style="overflow: hidden;">
            @foreach (var item in Model)
            {
                <a href="@(ViewBag.BasePath)Product/GroupBuyDetail/@item.GroupBuyId" class="J_datainfo T_ytag" >
                    <div class="img_wrap">
                        <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.GroupBuyImage, "T115X115_")" width="100" height="100"/>
                    </div>
                    <div class="text_wrap">
                        <p class="name" >
                            @item.ProductName</p>
                        <p class="price" style="padding-top: 0px;">
                           <span class="y_pf">¥ @item.Price.ToString("F")</span>
                        </p>
        <span class="valuation-star" style="padding: 0;overflow: auto;height: auto;"> 
<span class="txt-star" style="padding: 0;">已有@(item.BuyCount)人团购 </span></span>
<p class="item-brand txtenddate" style="margin: 5px 0;font-size: 12px;color: #7c7c7c;" endDate="@((item.EndDate.ToUniversalTime() - Convert.ToDateTime("1970-01-01")).TotalMilliseconds.ToString("0"))" Product="@item.GroupBuyId"  id="txtenddate_@(item.GroupBuyId)" >
剩余：<span id="dayEnd_@(item.GroupBuyId)">0</span>天<span id="hourEnd_@(item.GroupBuyId)">0</span>时 <span id="minEnd_@(item.GroupBuyId)">0</span>分 <span id="secEnd_@(item.GroupBuyId)">0</span>秒
</p>
                    </div>
                </a>
 
            }
        </div>
 
<div>
@Ajax.Pager(Model, new PagerOptions
{
    ShowDisabledPagerItems = false,
    AlwaysShowFirstLastPageNumber = false,
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 5,
    CurrentPagerItemTemplate = "<p class=\"in_s\">{0}</p>",
    NumericPagerItemTemplate = "<p>{0}</p>",
    NavigationPagerItemTemplate = "<p>{0}</p>",
    CssClass = "in_pages",
     
}).AjaxOptions(a => a.SetUpdateTargetId("ProductListDiv"))
</div>
    }

