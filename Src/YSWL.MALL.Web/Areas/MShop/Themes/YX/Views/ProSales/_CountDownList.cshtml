@using Webdiyer.WebControls.Mvc
@model YSWL.MALL.ViewModel.Shop.ProductListModel
    @if (Model != null && Model.ProductPagedList != null && Model.ProductPagedList.Count > 0)
    {

        <div style="overflow: hidden;">
            @foreach (var item in Model.ProductPagedList)
            {
                <a href="@(ViewBag.BasePath)Product/ProSaleDetail/@item.CountDownId" class="J_datainfo T_ytag" >
                    <div class="img_wrap">
                        <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T115X115_")" width="100" height="100">
                    </div>
                    <div class="text_wrap">
                        <p class="name" >
                            @item.ProductName</p>
                        <p class="price" style="padding-top: 0px;">
                           <span class="y_pf">¥ @item.ProSalesPrice.ToString("F")</span>
                        </p>
                        <p class="item-brand txtenddate" style="margin: 5px 0;font-size: 12px;color: #7c7c7c;" endDate="@((item.ProSalesEndDate.ToUniversalTime() - Convert.ToDateTime("1970-01-01")).TotalMilliseconds.ToString("0"))"  Product="@item.CountDownId"  id="txtenddate_@(item.CountDownId)" >
剩余：<span id="dayEnd_@(item.CountDownId)">0</span>天<span id="hourEnd_@(item.CountDownId)">0</span>时 <span id="minEnd_@(item.CountDownId)">0</span>分 <span id="secEnd_@(item.CountDownId)">0</span>秒
</p>
                    </div>
                </a>
 
            }
        </div>
        <div>
        @Ajax.Pager(Model.ProductPagedList, new PagerOptions
   {
       ShowDisabledPagerItems = false,
       AlwaysShowFirstLastPageNumber = false,
       PageIndexParameterName = "pageIndex",
       NumericPagerItemCount = 5,
       CurrentPagerItemTemplate = "<p class=\"in_s\">{0}</p>",
       NumericPagerItemTemplate = "<p>{0}</p>",
       NavigationPagerItemTemplate = "<p>{0}</p>",
       CssClass = "in_pages",
        
   }).AjaxOptions(a => a.SetUpdateTargetId("ProductListDiv"))
        </div>
    }
  
