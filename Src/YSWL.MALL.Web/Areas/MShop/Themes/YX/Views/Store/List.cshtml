<script type="text/javascript">
    $(function () {
        $(".modList[mod='@(mod)']").parent('li').addClass("current");
        $(".modList").click(function () {
            var mod = $(this).attr("mod");
            location.href = $YSWL.BasePath + "Store/list/@suppid/@cid/" + mod + '/@pvn/@ky';
        });
      
            $("#btnSearch").click(function () {
                var keyword = $("#txtKeyWord").val();
                if (keyword == "") {
                    ShowFailTip('请输入关键字！');
                    return false;
                }
                location.href = $YSWL.BasePath + "Store/list/@suppid/@cid/@mod/@pvn/" + keyword;
            });
    })
</script>
