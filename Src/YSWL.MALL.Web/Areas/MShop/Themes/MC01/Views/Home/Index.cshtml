                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="floor">
            <div class="floor_container">
                <div class="floor_item">
                    <div class="container_col1">
                        <!---畅销商品--->
                        <a href="@(ViewBag.BasePath)rec/hot/0/1/30/Hot">
                            <img src="/Areas/MShop/Themes/MC01/Content/images/fast_selling.jpg" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="floor fast_selling">
            <div class="floor_container mt pd">
                <div class="pro_container3_list">
                    @Html.Action("ProductRec", "Partial", new { Type= YSWL.MALL.Model.Shop.Products.ProductRecType.Hot, Top = 3, ViewName= "/Areas/MShop/Themes/MC01/Views/ShoppingCart/_ProductRec.cshtml" })
                </div>
            </div>
        </div>
        <div class="floor nosale-list">
            <div class="floor_container">
                @*<div class="home_title">
                    /推荐商品/
                </div>*@
                <div class="recommendtip">
                    <div class="title">
                        <em></em>
                        为您推荐
                    </div>
                </div>
                <div class="floor_item">
                    <div class="pro_container2_list">
                        @Html.Action("Index", "Recommend", new { type = "irec", vName = "IndexRec", ajaxVName = "_IndexRec" , pageSize =30})
                    </div>
                </div>
            </div>
        </div>
        <!--加载提示信息--->
        @Html.Partial("/Areas/MShop/Themes/MC01/Views/Partial/_LoadTip.cshtml")
        <!-- ################-->
        <!-- END TOP MENU -->
        <!-- ################-->
        <!--底部菜单---->
        <div class="bottom">
        </div>
        @Html.Partial("/Areas/MShop/Themes/MC01/Views/Partial/_FooterNav.cshtml")
    </div>
</div>
