@{
    Layout = "~/Areas/MShop/Themes/MC01/Views/Shared/_BaseLayout.cshtml";
}
@section head{
    <link href="/Areas/MShop/Themes/MC01/Content/Css/main.css" rel="stylesheet" />
}
<div class="main_wrapper">
    <!--START HEADER-->
    <header>
        <div class="top_navbar fixed_header">
            <div class="si icon_goback">
            </div>
            <p class="header_title">支付成功</p>
        </div>
    </header>
    <!-- END HEADER -->
    <div class="top"></div>
    <div class="pay_result_wrapper">
        <div class="con">
            <div class="pic_wrap">
                <img src="/Areas/MShop/Themes/MC01/Content/images/success.png">
                <div class="txt green f20">
                    您已成功支付，请注意查看您的账户余额。
                </div>
            </div>
            <div class="result_txt">
                <div class="info">
                    充值号：@(ViewBag.RechargeId)
                </div>
                <div class="info">
                    充值金额：@(ViewBag.RechargeBlance.ToString("F"))元
                </div>
            </div>
        </div>
        <div class="btn_wrapper  btn-impay">
            <a href="@(ViewBag.BasePath)UserCenter/Balance"><input type="button" class="b_btn btn_green" value="查看您的余额"></a>
        </div>
    </div>
    <!-- ################-->
    <!-- END TOP MENU -->
    <!-- ################-->

</div>

<input type="hidden" value="@ViewBag.RechargeId" id="RechargeId"/>
