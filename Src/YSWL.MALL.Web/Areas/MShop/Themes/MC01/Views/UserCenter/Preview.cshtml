@{
    Layout = "/Areas/MShop/Themes/MC01/Views/Shared/_BaseLayout.cshtml";
}
@using YSWL.Common
@model  List<YSWL.MALL.Model.Shop.Order.OrderItems>
<link href="/Areas/MShop/Themes/MC01/Content/Css/main.css" rel="stylesheet"/>
<link href="/Scripts/jquery.upload/fineuploader-3.4.1.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jquery.upload/jquery.fineuploader-3.4.1.min.js" type="text/javascript"></script> 
<script src="/Areas/MShop/Themes/MC01/Content/Scripts/commonality.js"></script>
<script src="/Areas/MShop/Themes/MC01/Content/Scripts/Review.js?1"></script>
<style>
    /*load显示模态框*/
    .modal-div{
        position: fixed;
        top: 0%;
        left: 0%;
        width: 100%;
        height: 100%;
        background-color: black;
        z-index:1010;
        -moz-opacity: 0.5;
        opacity:.50;
        filter: alpha(opacity=50);
    }
    .modal-load{
        position: absolute;
    }
</style>
<div class="main_wrapper mb55">
    <!--START HEADER-->
    <header>
        <div class="top_navbar fixed_header">
            @Html.Partial("/Areas/MShop/Themes/MC01/Views/Partial/_Back.cshtml")
            <p class="header_title">发表评价</p>
        </div>
    </header>
    <!-- END HEADER -->
    <div class="top"></div>
    <div class="commentModel">
        <div class="shop_group_item">
            <ul class="shp_cart_list">

                @foreach (var item in Model)
                {
                    <li>
                        <div class="items review_a">
                            <div class="pro_info send_comment pd">
                                <div class="pro_info_l">
                                    <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailsUrl, "T128x130_")"    onerror="this.onerror='';this.src='/Content/themes/base/Shop/images/none.png'" alt="">
                                </div>
                                <div class="pro_info_r">
                                    <div class="pro_name">
                                        @StringPlus.SubString(item.Name, "...", 25, false)
                                    </div>
                                </div>
                            </div>
                            <div class="rateContent pd">
                                <textarea name="content" id="" cols="" rows="" placeholder="请输入您宝贵的评价" onkeyup="textCounter(this,500)" onkeydown="textCounter(this,500)"></textarea>
                            </div>
                            <div class="upload pd reviewimg-upload UploadPhoto">
                                <input type="hidden" value="@item.OrderId" name="orderId" />
                                <input type="hidden" value="@item.ProductId" name="pid" />
                                <input type="hidden" value="@item.Attribute" name="attribute" />
                                <input type="hidden" value="@item.SKU" name="sku" />
                                <div class="upload_img_wrap">
                                    <div class="upload_img">
                                        <div class="localUpload" name="UploadPhoto">
                                            @*<input class="upload_file" type="file" capture multiple="multiple">*@
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" value="" name="UploadPhotoPath" />
                                <input type="hidden" value="" name="UploadPhotoNames" />
                            </div>
                        </div>
                    </li>
                }
                
                @*<li>
                    <div class="items">
                        <div class="pro_info send_comment pd">
                            <div class="pro_info_l">
                                <img src="images/pro3.jpg" alt="">
                            </div>
                            <div class="pro_info_r">
                                <div class="pro_name">
                                    五谷杂粮大豆320g黄豆黄豆五谷杂粮大豆320g 黄豆东北黄豆五谷杂粮大豆320g黄豆黄豆五谷杂粮大豆320g 黄豆东北黄豆
                                </div>
                            </div>
                        </div>
                        <div class="rateContent pd">
                            <textarea name="" id="" cols="" rows="" placeholder="请输入您宝贵的评价"></textarea>
                        </div>
                        <div class="upload pd">
                            <div class="upload_img_wrap">
                                <div class="upload_img">
                                    <div class="localUpload">
                                        <input class="upload_file" type="file" capture multiple="multiple">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>*@
            </ul>
        </div>
    </div>
    <div class="btn_wrapper">
        <input type="button"  class="b_btn btn_green" value="确认评价" onclick="submit();">
    </div>
    <!-- ################-->
    <!-- END TOP MENU -->
    <!-- ################-->
</div>

<script>
    $(function() {
        $('body').addClass('m_home');
    });

    $(function () {
        var windowH = $(window).height();
        var myContent = $(".commentModel").height();
        if (windowH < myContent) {
            $(".btn_wrapper").addClass('hold-fixed');
        } else {
            $(".btn_wrapper").removeClass('hold-fixed');
        }
    });
</script>
