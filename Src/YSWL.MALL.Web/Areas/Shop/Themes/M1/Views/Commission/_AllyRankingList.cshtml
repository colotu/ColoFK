 @using YSWL.Common;
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.ViewModel.Shop.CommissionStat>
    @if (null != Model)
    {
        <table width="100%" border="0" class="user_dingdan" cellspacing="0" cellpadding="0">
            <tr>
                <th>盟友</th>
                <th style="width: 100px;">佣金</th>
            </tr>
            @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr align="center">
                            <td height="40" class="bor" style="padding:0 0 0 3px; text-align:left;"  >
                                @item.NickName
                            </td>
                            <td class="bor" style="padding:0 3px 0 0;text-align:right">
                               ￥@item.TotalFee.ToString("F")
                            </td>
                        </tr>
                    }
                }
        </table>


        <center>
            @Ajax.Pager(Model, new PagerOptions
           {
               PageIndexParameterName = "pageIndex",
               NumericPagerItemCount = 10,
               NumericPagerItemTemplate = "<p>{0}</p>",
               NavigationPagerItemTemplate = "<p>{0}</p>",
               CssClass = "in_pages",
                
           }).AjaxOptions(a => a.SetUpdateTargetId("div_list"))
        </center>
    }
