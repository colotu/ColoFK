@{
    Layout = "~/Areas/Shop/Themes/M1/Views/Shared/_ShoppingLayout.cshtml";
}

<div class="w main">
<div class="m m3" id="qpay">
    <div class="mc">
        <s class="icon-succ02"></s>
        @if (ViewBag.OrderAmount > 0)
        {
            <div class="fore">
                <h3 class="ftx-02">
                    预订订单提交成功，请您尽快付款！</h3>
                <ul class="list-h">
                    <li class="fore1">订单号：@ViewBag.OrderCode</li>
                    <li class="fore2">应付订金金额：<strong class="ftx-01">@(ViewBag.OrderAmount.ToString("F"))元</strong></li>
                </ul>
                <p id="p_show_info">
                    &nbsp;</p>
                <p class="reminder" style="margin-bottom: 30px">
                    <strong>立即支付<span class="ftx-01">@(ViewBag.OrderAmount.ToString("F"))元</span>，即可完成预订订单。</strong>
                    <!-- 过期提示 -->
                    <!-- 过期提示页面 -->
                    @*请您在<span class="ftx-04">24小时</span>内完成支付，否则订单会被自动取消。*@
                </p>
                <input type="button" border="none" name="" class="btn-impay" value="立即支付">
            </div>
        }
        else
        {
            <div class="fore">
                <h3 class="ftx-02">
                    预订订单提交成功！</h3>
                <ul class="list-h">
                    <li class="fore1">订单号：@ViewBag.OrderCode</li>
                </ul>
                <p id="p_show_info">&nbsp;</p>
            </div>
        }
        
</div>
</div></div>
<script type="text/javascript">
    $('.btn-impay').unbind('click').bind('click', function () {
        window.location.replace('/pay/certification@(ViewBag.OrderId)/@(ViewBag.CurrentArea)');
        return;
    });
</script>
