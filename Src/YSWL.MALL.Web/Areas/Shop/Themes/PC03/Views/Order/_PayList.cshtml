@model  List<YSWL.Payment.Model.PaymentModeInfo>
<div class="step-title">
    <div id="save-consignee-tip" class="step-right">
    </div>
    <strong>支付方式</strong>
</div>
<div class="submitorder">
    <div class="waylist"  id="paylist">
        <ul>
            @if (Model != null && Model.Count > 0)
            {
                for (int i=0;i< Model.Count;i++)
                {
                    <li class="payment-type @(i==0?"selected":"")" payid="@Model[i].ModeId">
                        @Model[i].Name
                    </li>
                }
            }
            else
            {
                <li class="payment-type" payid="">
                            该网站未设置支付方式
                </li>
            }
        </ul>
        <div class="clear"></div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#paylist .payment-type').click(function () {
            $('#paylist .payment-type.selected').removeClass('selected');
            $(this).addClass('selected');
        });
    });
</script>