@model List<YSWL.MALL.Model.Shop.PromoteSales.GroupBuy>
<div class="floor-bd clearfix placeholder-pf">
    <div class="a-con">
        @Html.Action("AD", "Partial", new { AdvPositionId = 119, ViewName = "_IndexLeftAd" })
    </div>
    <div class="b-con">
        <div class="pro-list clearfix">
            <div class="pro-list-item">
                <div class="row2">
                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="pro-item">
                            <a href="@(ViewBag.BasePath)Product/GroupBuyDetail/@Model[0].GroupBuyId">
                                <p class="pro-name">@Model[0].ProductName</p>
                                <div class="pro-price">
                                    <span class="price-new"><i>¥</i>@Model[0].LowestSalePrice.ToString("F")</span>
                                    <span class="activity-tag tag-hollow-btn">立省@((Model[1].LowestSalePrice - Model[1].Price).ToString("F"))</span>
                                </div>
                                <div class="pro-pic">
                                    <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(Model[0].GroupBuyImage, "T115X115_")" alt="@Model[0].ProductName">
                                </div>
                            </a>
                        </div>
                        if (Model.Count > 1)
                        {
                            <div class="pro-item">
                                <a href="@(ViewBag.BasePath)Product/GroupBuyDetail/@Model[1].GroupBuyId">
                                    <p class="pro-name">@Model[1].ProductName</p>
                                    <div class="pro-price">
                                        <span class="price-new"><i>¥</i>@Model[1].LowestSalePrice.ToString("F")</span>
                                        <span class="activity-tag tag-hollow-btn">立省@((Model[1].LowestSalePrice - Model[1].Price).ToString("F"))</span>
                                    </div>
                                    <div class="pro-pic">
                                        <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(Model[1].GroupBuyImage, "T115X115_")" alt="@Model[1].ProductName">
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="c-con">
        <div class="big-ad">
            @Html.Action("AD", "Partial", new { AdvPositionId = 120, ViewName = "_AD" })
        </div>
    </div>
    <div class="d-con">
        <div class="pro-list clearfix">
            <div class="pro-list-item">
                <div class="row2">
                    @if (Model != null)
                    {
                        for (int i = 2; i < Model.Count; i++)
                        {
                            <div class="pro-item">
                                <a href="@(ViewBag.BasePath)Product/GroupBuyDetail/@Model[i].GroupBuyId">
                                    <p class="pro-name">@Model[i].ProductName</p>
                                    <div class="pro-price">
                                        <span class="price-new"><i>¥</i>@Model[i].LowestSalePrice.ToString("F")</span>
                                        <span class="activity-tag tag-hollow-btn">立省@((Model[1].LowestSalePrice - Model[1].Price).ToString("F"))</span>
                                    </div>
                                    <div class="pro-pic">
                                        <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(Model[i].GroupBuyImage, "T115X115_")">
                                    </div>
                                </a>
                            </div>
                            if (i == 3)
                            {
                                break;
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="e-con">
        <div class="goods-list">
            <div class="pro-list pro-item-border clearfix">
                <div class="pro-list-item">
                    @if (Model != null)
                    {
                        for (int i = 4; i < Model.Count; i++)
                        {
                            <div class="pro-item">
                                <a href="@(ViewBag.BasePath)Product/GroupBuyDetail/@Model[i].GroupBuyId">
                                    <div class="pro-pic">
                                        <img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(Model[i].GroupBuyImage, "T81X81_")">
                                    </div>
                                    <div class="r-info">
                                        <p class="pro-name">@Model[i].ProductName</p>
                                        <div class="pro-price">
                                            <span class="price-new"><i>¥</i>@Model[i].LowestSalePrice.ToString("F")</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            if (i == 8)
                            {
                                break;
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
