
@using YSWL.Common;
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Members.SiteMessage>
@if (null != Model)
{   <table width="100%" border="0" class="user_dingdan" cellspacing="0" cellpadding="0">
    @foreach (var item in Model)
    {
        <tr><td class="bor" style="width:108px;"> 
                        <!--<a href="/User/Posts/@item.ReceiverID"></a>-->
                        <img src="/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/@(@item.ReceiverID).jpg" width="58px" height="58px" onerror="this.onerror='';this.src='/@(YSWL.Components.MvcApplication.UploadFolder)/User/Gravatar/nophoto.png'" /> 
               </td>
            <td class="bor" style="text-align:left; padding-left:20px;">     
                        <p class="letters_bs_b1">
                            <span style=" font-size:12px; font-weight:normal">发给</span>&nbsp;<!--<a href="/User/Posts/@item.ReceiverID"></a>-->@item.ReceiverUserName</p>
                        <p class="letters_bs_b2">
                            @(string.IsNullOrEmpty(item.Title) ? "" : item.Title + ":") @item.Content<a href="javascript:;"></a></p>
                        <div class="letters_bs_b3">
                            <p class="letters_bs_b31">
                                @(item.SendTime.HasValue ? item.SendTime.Value.ToString("yyyy-MM-dd HH:mm:ss") : "")</p>
                         
                    </div></td>
            </tr> 

    }
     </table>
    <center>
        <!--jQuery Ajax Paging Start-->
        @Ajax.Pager(Model, new PagerOptions()
   {
       CssClass = "in_pages",
       PageIndexParameterName = "page",
       NumericPagerItemCount = 5,
       NumericPagerItemTemplate = "<p>{0}</p>",
       NavigationPagerItemTemplate = "<p>{0}</p>",
       FirstPageText = "首页",
       PrevPageText = "上一页",
       NextPageText = "下一页",
       LastPageText = "尾页"
   }).AjaxOptions(a => a.SetUpdateTargetId("OutBoxList"))
        <!--jQuery Ajax Paging End-->
    </center>
}
 
