@{
    Layout = "~/Areas/Shop/Themes/PC02/Views/Shared/_UserCenterLayOut.cshtml";
    YSWL.MALL.Model.Members.UsersExpModel UserInfo = ViewBag.UserInfo;
}
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Members.PointsDetail>
<link rel="stylesheet" type="text/css" href="/Areas/Shop/Themes/PC02/Content/styles/msg,btn,form,reg-base,reg.css?v=12022713" />
<link href="/Areas/Shop/Themes/PC02/Content/styles/UserCenterStyle.css" rel="stylesheet" type="text/css" />
<input type="hidden" id="currentpage" value="points"/>

<div class="col-main">
    
    <div class="user_dingdantitle">我的积分<div  style="float: right; margin-right:50px;">
                                您当前的积分:<span class="integral_a1">@UserInfo.Points</span></div></div>
    
    <table width="100%" border="0" class="user_dingdan" cellspacing="0" cellpadding="0">
        <tr>
            <th>积分日期</th>
            <th>积分类型</th>
            <th>积分</th>
            <th>说明</th>	
        </tr>
         @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr align="center">
                                                    <td height="40" class="bor" style="padding:0 0 0 0;" >
                                                        @item.CreatedDate.ToString("yyyy-MM-dd")
                                                    </td>
                                                    <td class="bor">
                                                        @item.RuleName
                                                    </td>
                                                    <td class="bor">
                                                        @if (item.Type == 0)
                                                        {
                                                            <strong style="color: #ff8a00;">+@item.Score</strong>
                 
                                                        }
                                                        else
                                                        {
                                                            <strong style="color: #33982e;">-@item.Score</strong>
                                                        }
                                                    </td>
                                                    <td class="bor">
                                                        @item.Description
                                                    </td>
                                                </tr>
                                            }
                                        }						         
    </table>
@if (Model != null)
{
     <center>
                                        @Html.Pager(Model, new PagerOptions
                                   {
                                       PageIndexParameterName = "pageIndex",
                                       NumericPagerItemCount = 10,
                                       NumericPagerItemTemplate = "<p>{0}</p>",
                                       NavigationPagerItemTemplate = "<p>{0}</p>",
                                       CssClass = "in_pages",
                                       FirstPageText = "首页",
                                       PrevPageText = "上一页",
                                       NextPageText = "下一页",
                                       LastPageText = "尾页"
                                   })
                                    </center>  
}

                </div>
