@model List<YSWL.MALL.Model.Shop.Products.CategoryInfo>
    @if (Model != null && Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <dl>
                <dt>
                    <a href="@(ViewBag.BasePath)product/@Model[i].CategoryId" title="@Model[i].Name">@YSWL.Common.StringPlus.SubString(Model[i].Name, 4, "...")</a>
                </dt>
                <dd class="pop-list" style="height:auto; ">
                    @Html.Action("CategoryList", "Partial", new { Cid = Model[i].CategoryId, Top = -1, viewName = "_IndexThirdCate" })
                </dd>
            </dl>
        }
                     <!-- pop-list -->

                     <!--hover显示内容结束-->

    }
    <!--textarea1结束-->
