}
<script type="text/javascript">
    pagename = 'HomePage';
</script>
    <div class="bgc">

        <!-- 轮播图 -->
         @Html.Action("AdDetail", "Partial", new { id =105, ViewName = "_IndexAd" })

        <!-- 活动 -->
