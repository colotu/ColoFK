  @{
      decimal totalprice;
  }
  @model List<YSWL.MALL.ViewModel.Shop.ProductAccessorie>
               @if (Model != null && Model.Count > 0)
               {
                   <div class="goods-tj pos_r1 " id="combo_div">
        	
            <ul class="goodus2 goodusxq1">
            	<li class="hover">优惠套装</li>
            </ul>
                  <ul class="ul_detail-list" id="ul_detail_list" >
                  @for (int i = 0; i < Model.Count; i++)
                          {
                              if (Model[i].ProductAccessorieInfo == null)
                              {
                                  continue;
                              }
                              if (i == 0)
                              {
                                     <li  class="scurr" item="acces_@(Model[i].ProductAccessorieInfo.AccessoriesId)">@Model[i].ProductAccessorieInfo.Name</li>
                              }
                              else
                              {
                                     <li class="sborder" item="acces_@(Model[i].ProductAccessorieInfo.AccessoriesId)">@Model[i].ProductAccessorieInfo.Name</li>
                              }

                          }
                      </ul>   




 @for (int i = 0; i < Model.Count; i++)
                      {
                     
                          if (Model[i].ProductAccessorieInfo == null)
                          {
                              continue;
                          }
                        
                                  <div class="div_access_item"   id="acces_@(Model[i].ProductAccessorieInfo.AccessoriesId)" @if (i != 0)
                                                                                                                               {
                                                                                                                                   @:style="display:none;"
                                                                                                                               } >

             @if (Model[i].SkuInfo != null && Model[i].SkuInfo.Count>0)
             {
                 totalprice = Model[i].SkuInfo[0].SalePrice;
       <ul class="tuj" style="margin-left:20px;">
            	<li><a href="@Model[i].SkuInfo[0].SeoUrl"   target="_blank" ><img src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(Model[i].SkuInfo[0].ProductThumbnailUrl, "T115X115_")" onerror="this.onerror='';this.src='/Areas/Shop/Themes/PC05/Content/Images/404.jpg'"></a>
                	<a href="@Model[i].SkuInfo[0].SeoUrl" target="_blank" title="@Model[i].SkuInfo[0].ProductName">@YSWL.Common.StringPlus.SubString(Model[i].SkuInfo[0].ProductName, 18, "...")</a>
                    <div   style="height:25px">
                                           @if (Model[i].SkuInfo[0].SkuItems != null && Model[i].SkuInfo[0].SkuItems.Count > 0)
                                           {
                                               foreach (var valueItems in Model[i].SkuInfo[0].SkuItems)
                                               {
                       <span class="product_s_k">@valueItems.ValueStr</span> 
                                               }


                                           }
                                                           
                            </div>    
		 
                </li>
                <li class="li-ja"></li>
            </ul>
                 
                 
                 
                       <div class="tjscr" style="height: 218px;">

            <ul class="tuj" style="margin-left: 0px; width:@((Model[i].SkuInfo.Count-1)*158-48)px;">
            @if (Model[i].SkuInfo.Count>1)
            {
              for (int k = 1; k < Model[i].SkuInfo.Count; k++)
              {
                  totalprice += Model[i].SkuInfo[k].SalePrice;
                  <li >
                            <a href="@Model[i].SkuInfo[k].SeoUrl" target="_blank"  >
                            <img   src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(Model[i].SkuInfo[k].ProductThumbnailUrl, "T115X115_")"  onerror="this.onerror='';this.src='/Areas/Shop/Themes/PC05/Content/Images/404.jpg'"/></a>
				                <a href="@Model[i].SkuInfo[k].SeoUrl" target="_blank"  title="@Model[i].SkuInfo[k].ProductName">@YSWL.Common.StringPlus.SubString(Model[i].SkuInfo[k].ProductName, 18, "...")</a>
                            <div   style="height:25px">
                                           @if (Model[i].SkuInfo[k].SkuItems != null && Model[i].SkuInfo[k].SkuItems.Count > 0)
                                           {
                                               foreach (var valueItems in Model[i].SkuInfo[k].SkuItems)
                                               {
                       <span class="product_s_k">@valueItems.ValueStr</span> 
                                               }


                                           }
                                                           
                            </div>    
			                </li>
                  if ((k + 1) < Model[i].SkuInfo.Count)
                  {
                  <li class="li-ja"></li>
                  }
              }
			               
                 }
            </ul>
            </div>

                 
            <ul class="tuj" style="margin-left:0">
            <li class="li-ji"></li>
            </ul>
            <div class="ullast" style="top:32px;right:10px;">
				<span>套装价：<b>¥<em  >@Model[i].ProductAccessorieInfo.DiscountAmount.ToString("F")</em></b></span>
                <span>原&#12288;价： <del  >¥@totalprice.ToString("F")</del> </span>
                <span>节&#12288;省：¥@((totalprice - Model[i].ProductAccessorieInfo.DiscountAmount).ToString("F"))</span>
				<div  >
                <a class="but_y" href="@(ViewBag.BasePath)Order/SubmitOrder?a=@(Model[i].ProductAccessorieInfo.AccessoriesId)" target="_blank" >购买套装</a>
            	</div>
            </div>
                  
                 
                 
             }  </div> 
                         
                      }
 
            <div class="clear"></div>
        </div>
 
               }
 
