@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Shop.PromoteSales.GroupBuy>
@{
    Layout = "/Areas/Shop/Themes/PC05/Views/Shared/_BaseLayout.cshtml";
    string cid = Request.RequestContext.RouteData.Values["cid"] != null ? Request.RequestContext.RouteData.Values["cid"].ToString() : "0";
    string regionId = Request.RequestContext.RouteData.Values["regionid"] != null ? Request.RequestContext.RouteData.Values["regionid"].ToString() : "643";
    string mod = Request.RequestContext.RouteData.Values["mod"] != null ? Request.RequestContext.RouteData.Values["mod"].ToString() : "default";
}
@section head{
         <link href="/Areas/Shop/Themes/PC05/Content/Css/goods.css" rel="stylesheet"/> 
         <script src="/Areas/Shop/Themes/PC05/Content/Scripts/timeCountDown.js" type="text/javascript"></script>
}  
<style type="text/css">
    #diqu_div select{height: 25px;margin-right: 5px;}
</style>
@*/Content/themes/base/images/404/224.jpg*@
<div class="sub-goodsbody clearfix">	

		<div class="sub-goodsleft"> 

        <div class="yizhou">
      
     	<h3 style="width: 186px;">热销新品</h3>
         @Html.Action("ProductRec", "Partial", new { Type = YSWL.MALL.Model.Shop.Products.ProductRecType.Latest, Top = 10, Cid = cid, ViewName = "_ProductRec" })
		</div> 
    </div>

  <div class="sub-goodsright">
  <div class="sub-s">
       <!--区域开始--->
             <ul class="sub-sul clearfix" >  
                    	<li class="clearfix "  id="arealist" >
                    
                        </li>
             <div class="clr">
             </div>
             </ul>
    <!--区域结束--->

      <!--分类--->
            @Html.Action("GetListCate")
                
        </div>
         
<div class="sub-pax">
        	<span class="s1">排序：</span>
            <span class="xl Sort">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy/@regionId/@cid/default" title="默认排序" mod="default">默认<span class="uparrow"></span></a> 
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy/@regionId/@cid/new" title="按发布时间排序"  mod="new">最新<span class="uparrow"></span></a> 
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy/@regionId/@cid/hot" title="销量从高到低" mod="hot">销量<span class="uparrow"></span></a> 
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy/@regionId/@cid/price" title="价格从低到高"  mod="price">价格<span class="uparrow"></span></a>
            </span>
            <div class="f-input" style="float: right;" id="diqu_div"> <script src="/Scripts/jquery/jquery.guid.js" type="text/javascript"></script>
                <input type="hidden" id="hfSelectedNode"  value="@ViewBag.regionId"/>
                <script src="/Scripts/jquery/maticsoft.selectregion.js" handle="/RegionHandle.aspx" isnull="true" type="text/javascript"></script>
            </div>
        </div>
	    <div id="ProductListDiv">
        @{Html.RenderPartial("_ProductList", Model);}
        </div>
    </div>
</div>
 
 <script type="text/javascript">
     $(function () {
         $("#arealist").load($YSWL.BasePath + "ProSales/GetArea/@regionId?cid=@cid&&mod=@mod");
         $("select:eq(2)").hide();
         $(".sequence a[id1='@mod']").addClass("current").siblings().removeClass("current");
         
         $("select:eq(1)").die("change").live("change", function () {
             $("select:eq(2)").hide();
             window.location.href = $YSWL.BasePath + "ProSales/GroupBuy/" + $(this).val() + "/@cid/@mod";
         });

         var mod = '@mod';
         $(".Sort").find("a").each(function () {
             var mode = $(this).attr("mod");
             if (mode == mod) {
                 $(this).addClass("hover");
             }
         });
         if ($(".Sort a.hover").length == 0) {
             $(".Sort a").eq(0).addClass('hover');
         }

     });
</script>


