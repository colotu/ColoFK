 @{
    Layout = "~/Areas/Shop/Themes/PC05/Views/Shared/_BaseLayout.cshtml";
 }
@section head{
<link rel="stylesheet" type="text/css" href="/Areas/Shop/Themes/PC05/Content/Css/msg,btn,form,login.css" />  
    <script type="text/javascript">
        var selfurl = window.location.pathname + window.location.search;
        if (selfurl.indexOf($YSWL.BasePath + 'Account/Login') == -1) {
            window.location = $YSWL.BasePath + "Account/Login?returnUrl=" + selfurl;
        }
        ; if (parent.length) { top.window.location = $YSWL.BasePath + "Account/Login" + window.location.search; }
    </script>
    <script src="/Areas/Shop/Themes/PC05/Content/Scripts/UserCenter/DefaultLogin.js" type="text/javascript"></script>
}
@model YSWL.MALL.ViewModel.Shop.LogOnModel 
@if (ViewData.ModelState != null &&
         ViewData.ModelState.Count > 0 &&
         ViewData.ModelState["Message"] != null &&
         ViewData.ModelState["Message"].Errors.Count > 0)
{
    <script type="text/javascript">
        $(function () {
            ShowFailTip('@ViewData.ModelState["Message"].Errors[0].ErrorMessage');
        })
    </script>
}    
 <div class="log-cent clearfix w980">
 <div class="box box-pwd login-reg">
            <div class="hd  mb15">
                <h2 class="fn f18"  style="margin: 10px;">
                    登录</h2>
            </div>
            <div class="bd"  style="border: none;">
                <div class="login fl">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post,new {Class="wform form"}))
                {
                    <input id="hfRegisterToggle" type="hidden" value="@ViewBag.RegisterToggle" /> 
                    <input name="returnUrl" type="hidden"  value="@ViewBag.returnUrl"/>
                    <fieldset style="border: none;">
                        <legend>登录</legend>
                        <div class="f-box">
                            <label class="f-label">
                               @if (ViewBag.RegisterToggle == "Phone")
                               {
                                   @:手机号码：
                               }
                               else
                               {
                                   @:邮箱地址：
                               } </label>
                            <div class="f-input">
                                <!--<input type="text" class="f-txt-b f-txt" id="txtLogin" name="xlInput" value=""/>-->
                                 @Html.TextBoxFor(m => m.UserName, new { Class="f-txt-b f-txt" ,id="txtLogin" ,name="xlInput"})
                            </div>
                            <div class="f-msg">
                                <div id="divLoginTip" >
                                    <span   style="  color: red;  font-size: 14px;"> @Html.ValidationMessageFor(m => m.UserName)</span>
                                </div>
                            </div>
                        </div>
                        <div class="f-box">
                            <label class="f-label">
                                密&#12288;&#12288;码：</label>
                            <div class="f-input">
                                <!--<input type="password" class="f-txt-b f-txt" id="password" name="xlInput"/>-->
                                @Html.PasswordFor(m => m.Password, new { Class = "f-txt-b f-txt", id = "password", name = "xlInput" })   
                            </div>
                            <div class="f-msg">
                                <div id="divPasswordTip">
                                    <span   style="  color: red;  font-size: 14px;"> @Html.ValidationMessageFor(m => m.Password)</span>
                                </div>
                            </div>
                        </div>
                         <div class="f-box" style="display:none;">
                             <label class="f-label">
                                 验证码：</label>
                             <div class="f-input">
                                 <input type="text" maxlength="4" class="f-txt-s f-txt" id="VerifyCode" name="xlInput"/>
                                 <div class="f-vcode">
                                     <img src="" id="loginVerifyCodeImg"/>
                                     <a href="javascript:;" class="imgchange c6" id="loginChangeImage">换一张</a>
                                 </div>
                             </div>
                             <div class="f-msg">
                                 <div id="divVerifyCodeTip">
                                 </div>
                             </div>
                         </div>
                         <input type="submit" id="inputloginsubmit" value="" style="display:none;"/>
                        <div class="login-btn">
                            <a class="btn btn-important-large fb" href="javascript:;" id="loginsubmit"><span>登<em class="s1em"></em>录</span></a>
                            <a class="ml10 c3" href="@(ViewBag.BasePath)Account/FindPwd">忘记密码？</a>
                        </div>
                        <div class="login-other cf">
                            <span class="c9">其它登录方式：</span>
                            <ul class="cf">
                                <li logintype="default" class="i-weibo" ><a style="height: 18px;" href="@(ViewBag.BasePath)social/sina">新浪微博</a></li>
                                <li logintype="default" class="i-alipay"><a style="height: 18px;" href="@(ViewBag.BasePath)social/qq">QQ登录</a></li>
                            </ul>
                        </div>
                    </fieldset>
                  }
                </div>
                <div class="reg fr">
                    <div class="reg-box">
                        <h3 class="fb f14 mb20">
                            马上成为@(ViewBag.WebName)会员</h3>
                        <p class="mb25">
                            现在注册@(ViewBag.WebName)，在家就能享受Fashion的购物乐趣，便宜、安全又放心！</p>
                        <div class="reg-btn mb25 pb25">
                            <a class="btn btn-important-large fb" href="@(ViewBag.BasePath)Account/Register" target="_blank"><span>&nbsp;注册新用户</span></a>
                        </div>
                     
                        <p class="c6">
                            <i class="i-mobile"></i>手机购物，上商城手机版<a href="@(ViewBag.BasePath)m"  class="ml10">点击进入</a></p>
                    </div>
                </div>
            </div>
        </div>
 
 
</div>


 
    
    
    