@model YSWL.MALL.ViewModel.Shop.ShippingAddressModel
            <h1>收货人信息  
    <input id="txtAddressCount" type="hidden" value="1"/>
    <span   id="consignee_edit_action"  style="display: none"> 
    <a href="#none" onclick="back_Before('consignee')">[关闭]</a></span>
        </h1>
         
         <div class="maddress" style="">
        <div class="xigai">
            <div class="addressList" id="consignee-list" >
         
                @if (Model.ListAddress != null && Model.ListAddress.Count > 0)
                {
                    foreach (YSWL.MALL.Model.Shop.Shipping.ShippingAddress item in Model.ListAddress)
                    {
                    <div class="item">
                    <p style="width:862px;">
                        <input type="radio" class="hookbox aItem" name="consignee_radio" id="consignee_radio_@(item.ShippingId)" value="@(item.ShippingId)" onclick="chose_Consignee('@(item.ShippingId)')">
                        <label for="consignee_radio_@(item.ShippingId)" onclick="chose_Consignee('@(item.ShippingId)')">
                            <b>@(item.ShipName)</b>&nbsp; @(item.RegionFullName)
                            @(YSWL.Common.StringPlus.SubString(item.Address, 25, ".."))
                            &nbsp; @(item.CelPhone)
                            &nbsp;
                        </label>

                        <span class="item-action" style="display: none;"><a href="javascript:;" onclick="show_ConsigneeDetail('@(item.ShippingId)')">编辑</a> &nbsp; <a href="javascript:;" style="display: none" onclick="delete_Consignee('@(item.ShippingId)')">删除</a>&nbsp; </span>
                    </div>
                    }
                }
           
            

            </div><!-- 收货地址列表-->
 
            <p class=" item"  id="use-new-address">
            @*<a name="editConsignee"></a>*@
                <input type="radio" onclick="use_NewConsignee()" class="hookbox aItem addnew " name="consignee_radio" id="consignee_radio_new">
                <label for="consignee_radio_new">
                    使用新地址
                </label>
                <span id="addNumLimitNote" class="status error" style="display: none;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 当前地址数量已达上限，若要继续添加新地址，请先删除部分收货地址。</span>
            </p>


           
             @using (Html.BeginForm("SubmitAddressInfo", "Order", FormMethod.Post, new { id = "FormSubmitAddress" }))
            {
                <input type="hidden" id="IsModify" name="IsModify" value= "@ViewBag.IsModify" />
                @Html.HiddenFor(m => m.CurrentAddress.ShippingId)
                @Html.HiddenFor(m => m.CurrentAddress.UserId)
                 <ul class="addnewddres clearfix" id="consignee-form"  id="consignee-form" style=" display: none;">
            	<li><span class="left"><i>*</i>收货人：</span>
                  @Html.TextBoxFor(m => m.CurrentAddress.ShipName, new { maxlength = "20", @class = "ext" })
                  <span class="status error" id="name_div_error" class="colorRed"></span>
            	<em>
                邮编</em>
                @Html.TextBoxFor(m => m.CurrentAddress.Zipcode, new { maxlength = "6", @class = "ext" })
            	 </li>
                <li><span class="left"><i>*</i>所在区：</span>
	                <span id="span_area">
                                @Html.HiddenFor(m => m.CurrentAddress.RegionId, new { id = "hfSelectedNode", handle = "/RegionHandle.aspx", isnull = "true" })
                                <script src="/Scripts/jquery/maticsoft.selectregion.js" type="text/javascript"></script>
                            </span>
                              <span class="status error" id="area_div_error"></span>
                 </li>
                <li><span class="left"><i>*</i>详细地址：</span>
                    @Html.TextBoxFor(m => m.CurrentAddress.Address, new { maxlength = "50", @class = "ext ext1" })
	                <span class="status error" id="address_div_error"></span>
                </li>
                <li  id="call_div"><span class="left"><i>*</i>手机号码：</span>
                @Html.TextBoxFor(m => m.CurrentAddress.CelPhone, new { maxlength = "11", @class = "ext ext1" })
                 <span class="status error" id="call_div_error"></span></li>
            </ul>          
                 

 
            }
            
            <div class="form-btn group">
                      <a href="javascript:;" class="okaddress okaddress0 btn-submit"  onclick="Save_Consignee(this)"></a>
                    <div class="loading loading-1" style="display: none">
                        <b></b>正在提交信息，请等待！</div>
                <div style="clear:both;"></div>
                </div>
        </div>
      
        </div>

 
 
<script type="text/javascript">
    function use_NewConsignee() {
        var $target = $('#step-1');
        Status_Editing($target);
        $target.load($YSWL.BasePath + 'Order/AddressInfo', { addressId: 0, IsModify: false });
    }

    function show_ConsigneeDetail(addressId) {
        var $target = $('#step-1');
        Status_Editing($target);
        $target.load($YSWL.BasePath + 'Order/AddressInfo', { addressId: addressId, IsModify: true });
    }

    function chose_Consignee(addressId) {
        $('.item-action').hide();
        $('#consignee-list .item').removeClass('item-selected').find('input[type=radio]').prop('checked', false);
        $('#use-new-address').removeClass('item-selected').find('input[type=radio]').prop('checked', false);
        $('#consignee-form').hide();
        $('#consignee-list .item #consignee_radio_' + addressId).prop('checked', true).parent().addClass('item-selected').find('.item-action').show();
        $('#CurrentAddress_ShippingId').val(addressId);
    }

    if ($('#IsModify').val() == "True") {
        //编辑模式
        chose_Consignee($('#CurrentAddress_ShippingId').val());
        $('#consignee-form').show();
    } else {
        if (parseInt($('#CurrentAddress_ShippingId').val()) < 1) {
            //新增模式
            $('.item-action').hide();
            $('#consignee-list .item').removeClass('item-selected').find('input[type=radio]').prop('checked', false);
            $('#consignee-form').show();
            $('#use-new-address').addClass('item-selected').find('input[type=radio]').prop('checked', true);
        } else {
            //默认模式
            chose_Consignee($('#CurrentAddress_ShippingId').val());
        }
    }

    function Save_Consignee(sender) {
        if ($('#consignee-form').is(':visible')) {
            var shipName = $("#CurrentAddress_ShipName").val();
            if (shipName == "") {
                ShowFailTip("请填写收货人");
                return;
            }
            var regionId = parseInt($("#hfSelectedNode").val());
            if (regionId == 0 || $("#hfSelectedNode").val() == "") {
                ShowFailTip("请选择所在地区");
                return;
            }
            var address = $("#CurrentAddress_Address").val();
            if (address == "") {
                ShowFailTip("请填写详细地址");
                return;
            }
            var celPhone = $("#CurrentAddress_CelPhone").val();
            if (celPhone == "") {
                ShowFailTip("请填写手机号码");
                return;
            }
            var reg = /^1\d{10}$/;
            if (!reg.exec(celPhone)) {
                ShowFailTip("输入/^1\d{10}$/号码");
                return;
            }
        }
        $(sender).hide();
        $(sender).next().show();
        var form = $('#FormSubmitAddress');
        $.post(
            form.get(0).action,
            form.serialize(),
            function (data) {
                $('#step-1').html(data);
                Status_None();
                //window.location.hash = "consigneeFocus";
                // Edit_Payment(null, true);
                //todo 重新计算运费   且 重新
            }
        );
    }
</script>
