 @{
    Layout = "/Areas/Shop/Themes/PC05/Views/Shared/_UserCenterLayout.cshtml";
 }  
    <input type="hidden" id="currentpage" value="span_6" />
    <div class="m-right">
        <!-- 用户信息 E -->
        <div class="user_dingdantitle">账户余额</div>
        <div class="user_titlebottom">
        <div  style="float: left;">
        可用余额：<span> ￥@(ViewBag.Balance.ToString("F"))</span> 
        <div id="balanceDraw" style="display:none;">&nbsp;&nbsp;提现金额：<span><label id="labbalanceDraw">@ViewBag.BalanceDraw.ToString("F")</label></span> </div> 
        &nbsp;&nbsp;账户状态：<span>@ViewBag.Activity</span> 
        </div>
            <div  class="fr">
                <a href="@(ViewBag.BasePath)UserCenter/Recharge" class="usercenterbtn" style="height: 30px;margin-top: 4px">&nbsp;&nbsp;&nbsp;&nbsp;</a>
                <a href="@(ViewBag.BasePath)UserCenter/Draw" class="withdraw" style="margin-right: 10px;vertical-align: top">申请提现</a>
            </div>
        </div> 
        <div id="divdetaillist">
             @Html.Action("BalanceDetList", "UserCenter") 
        </div>
    </div>
<script type="text/javascript">
    $(function () {
        
        //如果提现金额大于0就显示 提现金额
        if (parseFloat($('#labbalanceDraw').text()) > 0) {
            $('#balanceDraw').css('display', 'inline');
        }
        
        //单击列表 切换
        $('.user_rechargedetial a:not(".curr")').die('click').live('click', function () {
            var itemval = $(this).attr('item');
            if (itemval) {
                $('#divdetaillist').load($YSWL.BasePath + "UserCenter/" + itemval, function () {
                    $("[data-pagerid='Webdiyer.MvcPager']").initMvcPagers();//调用ajax分页方法
                });
            }
        });
    }); 
</script>
@section foot{
    <script src="/scripts/MvcPager-1.8.js" type="text/javascript"></script>
}