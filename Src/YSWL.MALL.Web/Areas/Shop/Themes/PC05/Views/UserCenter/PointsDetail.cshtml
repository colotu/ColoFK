@{
    Layout = "~/Areas/Shop/Themes/PC05/Views/Shared/_UserCenterLayOut.cshtml";
    YSWL.MALL.Model.Members.UsersExpModel UserInfo = ViewBag.UserInfo;
}
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Members.PointsDetail>
  
<div class="m-right">
    
    <div class="user_dingdantitle"><span style="float: left;">我的积分</span><span  style="float: right; margin-right:50px;">
                                您当前的积分:<span class="integral_a1">@UserInfo.Points</span></span></div>
    
    <table width="100%" border="0" class="user_dingdan" cellspacing="0" cellpadding="0">
        <tr>
            <th>积分日期</th>
            <th>积分类型</th>
            <th>积分</th>
            <th>说明</th>	
        </tr>
         @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr align="center">
                                                    <td height="40" class="bor" style="padding:0 0 0 0;" >
                                                        @item.CreatedDate.ToString("yyyy-MM-dd")
                                                    </td>
                                                    <td class="bor">
                                                        @item.RuleName
                                                    </td>
                                                    <td class="bor">
                                                        @if (item.Type == 0)
                                                        {
                                                            <strong style="color: #ff8a00;">+@item.Score</strong>
                 
                                                        }
                                                        else
                                                        {
                                                            <strong style="color: #33982e;">-@item.Score</strong>
                                                        }
                                                    </td>
                                                    <td class="bor">
                                                        @item.Description
                                                    </td>
                                                </tr>
                                            }
                                        }						         
    </table>
@if (Model != null)
{
    <div style="margin-top: 20px;">
    @Html.Pager(Model, new PagerOptions
{
    ShowDisabledPagerItems = false,
    AlwaysShowFirstLastPageNumber = true,
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 10,
    CurrentPagerItemTemplate = "<a class=\"shoye\">{0}</a>",
    CssClass = "page",
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "尾页"
})
            </div> 
}
                </div>
