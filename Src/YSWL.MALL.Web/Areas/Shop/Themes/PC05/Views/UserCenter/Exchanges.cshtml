@{
    Layout = "~/Areas/Shop/Themes/PC05/Views/Shared/_UserCenterLayOut.cshtml";
    YSWL.MALL.Model.Members.UsersExpModel UserInfo = ViewBag.UserInfo;
}
@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.MALL.Model.Shop.Gift.ExchangeDetail>
 <script type="text/javascript">
     $(function () {
         var totalPoint =parseInt('@UserInfo.Points');
         $("#btnExchange").click(function() {
             var point =parseInt($(".radExc:checked").attr("point"));
             if (!point) {
                 ShowFailTip(" 请选择优惠券！");
                 return;
             }
             if (point > totalPoint) {
                 ShowFailTip(" 您的积分不足！");
                 return;
             }
             var ruleId = $(".radExc:checked").attr("ruleId");
             $.ajax({
                 type: "POST",
                 dataType: "text",
                 url: "@(ViewBag.BasePath)UserCenter/AjaxExchange",
                 data: { RuleId: ruleId },
                 success: function(data) {
                     if (data == "True") {
                         ShowSuccessTip("兑换优惠券成功！");
                         window.location.reload();
                     } else if (data == "NoPoints") {
                         ShowFailTip(" 您的积分不足！");
                     } else {
                         ShowFailTip("服务器繁忙，请稍候再试！");
                     }
                 }
             });
         });
     })
</script>
 
<div class="m-right">
    <div class="user_dingdantitle">
      <span style="float: left;">积分换券</span><span style="float: right; margin-right: 50px;">
                您当前的积分:<span class="integral_a1">@UserInfo.Points</span></span>
    </div>
       @Html.Action("CouponRule", "UserCenter", new { area = "Shop" })
    
    <table width="100%" border="0" class="user_dingdan" cellspacing="0" cellpadding="0">
        <tr>
            <th>
                兑换日期
            </th>
            <th>
                兑换面值
            </th>
            <th>
                消耗积分
            </th>
            <th>
                状态
            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <tr align="center">
                <td height="40" class="bor" style="padding: 0 0 0 0;">
                    @item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")
                </td>
                <td class="bor">
                    @(item.Price.HasValue ? item.Price.Value.ToString("F") : "0")
                </td>
                <td class="bor">
                    @item.CostScore
                </td>
                <td class="bor">
                    @(item.Status == 1 ? "兑换成功" : "兑换失败")
                </td>
            </tr>
            }
        }
    </table>
@if (Model != null)
{
      <div style="margin-top: 20px;">
    @Html.Pager(Model, new PagerOptions
{
    ShowDisabledPagerItems = false,
    AlwaysShowFirstLastPageNumber = true,
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 10,
    CurrentPagerItemTemplate = "<a class=\"shoye\">{0}</a>",
    CssClass = "page",
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "尾页"
})
            </div> 
}

</div>
