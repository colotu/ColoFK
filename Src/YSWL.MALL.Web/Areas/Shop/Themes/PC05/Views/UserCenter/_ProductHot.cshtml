@model List<YSWL.MALL.Model.Shop.Products.ProductInfo>
 
 <div id="RecommendContent">
                <div class="box maybelike">
                    <div class="hd">
                        <h2 style="padding: 10px 10px 0;">
                            热销爆款</h2>
                    </div>
                    <div class="bd">
                        @if (Model != null)
                        {
                         <ul class="list-m list-m-n5" id="ulTopSaleList" style="width: auto; padding-left: 10px;">
                            @foreach (var item in Model)
                            {
                             <li  class="item-m" style="width: auto;padding-right: 13px;"><a href="@item.SeoUrl" target="_blank" title="@item.ProductName">
                                                                   <img class="item-m-pic"  style="width:115px;height:115px;"  src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T115X115_")" onerror="this.onerror='';this.src='/Content/themes/base/Shop/images/none.png'">
                                                                   <span class="item-m-title">@item.ProductName </span></a>
                                <p class="item-m-price">
                                    <span style="font-weight: bold;color: #ea0000;" class="font_jq">￥@item.LowestSalePrice.ToString("F")</span></p>
                            </li>
                   
                            }
                        </ul>
                           
                        }
                       
                    </div>
                </div>
            </div>
