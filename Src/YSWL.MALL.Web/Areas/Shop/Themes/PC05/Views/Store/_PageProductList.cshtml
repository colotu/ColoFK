 @using Webdiyer.WebControls.Mvc 
 @model PagedList<YSWL.MALL.Model.Shop.Products.ProductInfo>

            @if (Model!=null )
    { 
            <div class="blank20"></div>
    <div class="shanpinlist shanpinlist_1">
        <ul>
         @foreach (var item in Model)
                {
                    
             
             <li styleid="product_@(item.ProductId)" class="item-sale"   >
<div class="tucheng" style="padding: 0 5px 0 0 ;">
    <a href="@(ViewBag.BasePath)Product/Detail/@item.ProductId"  target="_blank"  title="@item.ProductName" class="ForSkuLink">
        <img title="@item.ProductName" alt="@item.ProductName" src="@YSWL.MALL.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T350X350_")" width="180" height="180" />
    </a>
<div class="shanpinlist_con">
<h2><a href="@(ViewBag.BasePath)Product/Detail/@item.ProductId"  target="_blank">@item.ProductName</a></h2>
<p style="display:none;">已有 <a href="javascript:;">0</a> 人评价</p>
<div class="jiage_cen">￥ @(item.LowestSalePrice.ToString("F"))</div>
</div>
</div>
<div class="jBtnArea" style="padding: 0 5px 0 0 ;">
                    <a href="javascript:;" target="_blank" style="display:none;">购买</a>
            <a href="javascript:;" target="_blank" class="ProductFav" productId="@item.ProductId">收&nbsp;&nbsp;藏</a>
            <a href="javascript:;" target="_blank" style="display:none;">对比</a>

          </div>
</li>
                }

 
</ul>


    </div>
             <div style="margin-top: 20px;">
    @Ajax.Pager(Model, new PagerOptions
{
    ShowDisabledPagerItems = false,
    AlwaysShowFirstLastPageNumber = true,
    PageIndexParameterName = "pageIndex",
    NumericPagerItemCount = 10,
    CurrentPagerItemTemplate = "<a class=\"shoye\">{0}</a>",
    CssClass = "page",
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "尾页"
}).AjaxOptions(a => a.SetUpdateTargetId("ProductListDiv"))
            </div>
    }
     

