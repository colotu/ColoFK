@{
    Layout = "~/Areas/Shop/Themes/PC05/Views/Shared/_ShoppingLayout.cshtml";
}
@section head{
  <link href="/Areas/Shop/Themes/PC05/Content/Css/goods.css" rel="stylesheet"/>
   }
<div class="os">您的订单存在风险，请查看订单状态或稍后重试。</div>
    
    <table class="otab"  style="width: auto;">
    	<tbody><tr class="tr1">
        	<td width="149">订单号</td>
        </tr>
        <tr>
        	<td>@ViewBag.OrderCode</td>
        </tr>

      
    </tbody></table>
    <div class="o-ok">
    <p id="p_show_info" style="display: none;margin-bottom: 10px;margin-left: 25px;">
                       点击下面按钮可重新支付</p>
        <a   class="but_sss_aa btn-conti" style="display: none;"  href="javascript:;">继续支付</a>
    </div>     
 
 
<input type="hidden" value="@ViewBag.OrderId" id="OrderId"/>
<input type="hidden" value="@ViewBag.PayStatus" id="Status"/>
<script type="text/javascript">
    (function () {
        var id = $('#OrderId').val();
        var url;
        if (id) {
            url = '/pay/certification' + id + '/' + $YSWL.CurrentArea;
        } else {
            url = $YSWL.BasePath + 'UserCenter/Orders';
        }
        $('.btn-conti').unbind('click').bind('click', function () {
            window.location.replace(url);
        });
    })();
</script>
